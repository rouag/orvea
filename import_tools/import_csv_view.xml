<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<menuitem id="import_root" name="Import Tools"/>

		<menuitem id="import_menu" name="Import"
			parent="import_root"   />
		
		<record model="ir.ui.view" id="import_import_form">
			<field name="name">import.form</field>
			<field name="model">import.import</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Importer Fichier " version="7.0">
					<header>
						<button name="import_file" string="Importer" type="object"
							attrs="{'invisible': [('state', '=', 'done')]}" class="oe_highlight" />
						<field name="state" widget="statusbar" statusbar_visible="draft,failure,done" />
					</header>
					<sheet>

						<div class="oe_title">
							<h1>
								Importer 
							</h1>
						</div>

						<group>
							<group>
								<field name="data" />
							

								<field name="name" />
							</group>
							<group>
							</group>
						</group>
						<field name="description" placeholder="Informations supplÃ©mentaires sur le fichier"
							nolabel="1" />
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>


		<record id="action_import_import" model="ir.actions.act_window">
			<field name="name">Importer</field>
			<field name="res_model">import.import</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Importer 
				</p>
			</field>
		</record>

		<menuitem action="action_import_import" id="menu_import_import" 
			parent="import_menu" sequence="10" />

 

 		 


	</data>
</openerp>
	