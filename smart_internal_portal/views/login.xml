<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="login_page" name="login page">
			<head>
				<meta charset="utf-8" />
				<meta name="description" content="bootstrap default admin template" />
				<meta name="viewport" content="width=device-width" />
				<title>تسجيل دخول | هيئة الادعاء العام</title>
				<t t-call="smart_internal_portal.assets_login_css" />
			</head>
			<body>
				<!-- START CONTENT -->
				<div class="login_v2">
					<div class="login_v2_main">
						<div class="login_v2_contain">
							<div class="login_v2_form text-xs-center">
								<p class="alert alert-danger" t-if="error">
									<t t-esc="error" />
								</p>
								<p class="alert alert-success" t-if="message">
									<t t-esc="message" />
								</p>
								<input type="hidden" name="redirect" t-att-value="redirect" />
								<img
									src="/smart_internal_portal/static/src/assets/global/image/logo_2.png"
									alt="" class="img-responsive" style="width:170px;" />
								<h5>تسجيل الدخول</h5>
								<form action="#" id="form-validation" method="post">
									<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
									<div class="login_v2_text_field">
										<i class="icon icon_mail"></i>
										<input type="text" id='login' name='login' placeholder="اسم المستخدم" />
									</div>
									<div class="login_v2_text_field">
										<i class="icon icon_key"></i>
										<input type="password" id='password' name='password'
											placeholder="كلمة المرور" />
									</div>
									<div class="checkbox-login login_v2_check">
										<div class="checkbox-squared">
											<input value="None" id="checkbox-squared1" name="check"
												type="checkbox" />
											<label for="checkbox-squared1"></label>
											<span>تذكرني</span>
										</div>
									</div>
									<div class="login_v2_forget_text">
										<a href="/web/reset_password">نسيت كلمة المرور؟</a><!-- forgot_password_v2.html -->
									</div>
									<button type="submit"
										class="btn flat-buttons btn-primary btn-block text-xs-center">دخول</button>
									<div class="login_v2_sign_link">
										<i class="arrow_back"></i>
										مستخدم جديد? سجل
										<a href="javascript:void(0);">من هنا.</a><!-- register_v2.html -->
									</div>
								</form>
							</div>
							<div class="login_v2_reserved_text text-xs-center bold-fonts">
								<p>© 2017. جميع الحقوق محفوظة.</p>
							</div>
						</div>
					</div>
				</div>
				<!-- END CONTENT -->


				<!-- START CORE JAVASCRIPT -->
				<script type="text/javascript"
					src="/smart_internal_portal/static/src/assets/layouts/layout-left-menu/js/jquery.min.js"></script>
				<script type="text/javascript"
					src="/smart_internal_portal/static/src/assets/global/plugins/tether/dist/js/tether.min.js"></script>
				<script type="text/javascript"
					src="/smart_internal_portal/static/src/assets/global/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
				<script type="text/javascript"
					src="/smart_internal_portal/static/src/assets/global/plugins/Waves/dist/waves.min.js"></script>
				<script type="text/javascript"
					src="/smart_internal_portal/static/src/assets/pages/global/js/global.min.js"></script>
				<!-- END CORE JAVASCRIPT -->
				<!-- START PAGE PLUGINS -->
				<script type="text/javascript"
					src="/smart_internal_portal/static/src/assets/global/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
				<!-- END PAGE PLUGINS -->
				<!-- START PAGE JAVASCRIPT -->
				<script type="text/javascript"
					src="/smart_internal_portal/static/src/assets/global/js/global/global_validation.js"></script>
				<!-- END PAGE JAVASCRIPT -->
			</body>
		</template>

	</data>
</openerp>
