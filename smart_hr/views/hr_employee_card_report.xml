<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<template id="hr_employee_card_report">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">

					<t t-call="smart_base.landscape_layout_header" />
					<div class="page">
						<style type="text/css">
							.emppic{
							position: absolute;
							left: 0;
							top: -50px;
							}
						</style>
						<div>
							<div class="  text-center">
								<h4>
									<span t-field="o.department_id" />
								</h4>
							</div>
							<div class="col-xs-12">
								<div class="col-xs-8 text-center">
									<strong>
										<span t-field="o.emp_name" />
									</strong>
								</div>
								<div class="col-xs-4">
									<img class="emppic" height="150"
										t-att-src="'data:image/png;base64,%s' % o.employee_id.image"
										width="100" />
								</div>
							</div>
							<br></br>
							<p>
								<b>رقم السجل:</b>
								<span t-field="o.identification_id" />
							</p>
							<p>
								<b>المسمى الوظيفي:</b>
								<span t-field="o.employee_id.job_id" />
							</p>
							<p>
								<t t-if="o.employee_id.is_member == False">
									<b>المرتبة:</b>
									<span t-field="o.employee_id.grade_id" />
								</t>
							</p>

							<p>
								<b>تاريخ الإنتهاء:</b>
								<span t-esc="get_hijri_date(o.expiration_date, '-')" />
							</p>
						</div>
						<br></br>
						<p align="center">
							تعليمات
						</p>
						<p align="right">
							* أي كشف أي تعديل في معلومات هذه البطاقة يبطل مفعولها
						</p>
						<p align="right">
							* يجب إعادة هذه البطاقة لمصدرها فور إنتهاء خدمات حاملها
						</p>
						<p align="right">
							* يجب إبلاغ المرجع في حال فقدان البطاقة
						</p>
						<p align="right">
							* يرجى ممن يعثر على هذه البطاقة تسليمها إلى أقرب مركز
							شرطة
						</p>
						<p align="right">
							* ينتهي مفعول هذه البطاقة بعد أربعة سنوات من تاريخ
							صدورها
						</p>
					</div>



				</t>

			</t>
		</template>

	</data>
</openerp>