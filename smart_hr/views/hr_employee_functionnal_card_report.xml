<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<template id="hr_employee_functionnal_card_report">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="smart_base.landscape_layout">

						<div class="page">
							<br />
							<br />

							<div class="  text-center">
								<h3>
									<strong>
										بطاقة موظف
									</strong>
									<br />
									<br />
								</h3>
							</div>

				

								<p>
									<b>الإسم:</b>
									<strong>
										<span t-field="o.emp_name" />
									</strong>
								</p>
								<br />
								<br />
								<p>
									<b>الهوية الوطنية:</b>
									<strong>
										<span t-field="o.identification_id" />
									</strong>
								</p>
								<br />
								<br />


								<p>
									<b>المسمى الوظيفي:</b>
									<strong>
										<span t-field="o.employee_id.job_id" />
									</strong>
								</p>
								<br />
								<br />
								<p>
									<t t-if="o.employee_id.is_member == False">
										<b>المرتبة:</b>
										<strong>
											<span t-field="o.employee_id.grade_id" />
										</strong>

										<br />
										<br />
									</t>
								</p>
								<p>
									<b>المقر:</b>
									<strong>
										<span t-field="o.department_id" />
									</strong>
								</p>
								<br />
								<br />
								<p>
									<b>تاريخ الإنتهاء:</b>
									<strong>
										<span t-field="o.expiration_date" />
									</strong>
								</p>
							</div>
							
			
						
						<br />
						<br />
						<br />


					</t>

				</t>
			</t>
		</template>

	</data>
</openerp>