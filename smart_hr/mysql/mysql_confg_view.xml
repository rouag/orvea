<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<record id="view_form_hr_mysql_config" model="ir.ui.view">
			<field name="name">hr.mysql.config.form</field>
			<field name="model">hr.mysql.config</field>
			<field name="arch" type="xml">
				<form string="إعدادات  جدول الحضور و الإنصراف">
					<sheet>
						<group>
							<field name="host" required="1" />
							<field name="port" />
							<field name="db" required="1" />
							<field name="user" required="1" />
							<field name="passwd" required="1" password="True" />
							<field name="latest_date_import" />
							<button name="action_done" string="تحديث" type="object" />
						</group>

					</sheet>
				</form>
			</field>
		</record>
		<record id="view_tree_hr_mysql_config" model="ir.ui.view">
			<field name="name">hr.mysql.config.tree</field>
			<field name="model">hr.mysql.config</field>
			<field name="arch" type="xml">
				<tree string="إعدادات  جدول الحضور و الإنصراف" class="oe_tree_view">
					<field name="host" required="1" />
					<field name="user" required="1" />
					<field name="db" required="1" />
				</tree>
			</field>
		</record>
		<record id="action_hr_mysql_config" model="ir.actions.act_window">
			<field name="name">إعدادات جدول الحضور و الإنصراف </field>
			<field name="res_model">hr.mysql.config</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>

		<menuitem id="menu_hr_mysql_config" action="action_hr_mysql_config"
			sequence="40" parent="hr_root_employee_configuration" />
	</data>
</openerp>
