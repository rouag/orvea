<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>


		<!-- presence -->
		<record id="view_hr_plan_presence" model="ir.ui.view">
				<field name="name">hr.plan.presence.form</field>
			<field name="model">hr.plan.presence</field>
			<field name="arch" type="xml">
				<form string="خطة الحضور والإنصراف">
					<sheet>
						<group>
							<group col="2">
								<field name="name" string=" إسم الخطة" required="1" />
							</group>
							<group col="4">
								<field name="late" />
								<field name="percent_late" />
							</group>
							<group col="4">
								<field name="living_before_time" />
								<field name="percent_living" />
							</group>
							<group col="4">
								<field name="max_sup_hour" />
								<field name="min_sup_hour" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_treehr_plan_presence" model="ir.ui.view">
			<field name="name">hr.plan.presence.form</field>
			<field name="model">hr.plan.presence</field>
			<field name="arch" type="xml">
				<tree string="خطة الحضور والإنصراف" class="oe_tree_view">
					<field name="name" />
					<field name="late" />
					<field name="percent_late" />
					<field name="living_before_time" />
					<field name="percent_living" />
					<field name="max_sup_hour" />
					<field name="min_sup_hour" />
				</tree>
			</field>
		</record>
		<record id="view_search_hr_plan_presence" model="ir.ui.view">
			<field name="name">hr.plan.presence.form</field>
			<field name="model">hr.plan.presence</field>
			<field name="arch" type="xml">
				<search string="خطة الحضور والإنصراف">
					<field name="name" />
					<field name="late" />
					<field name="percent_late" />
					<field name="living_before_time" />
					<field name="percent_living" />
					<field name="max_sup_hour" />
					<field name="min_sup_hour" />
				</search>
			</field>
		</record>
		<record id="action_hr_plan_presence" model="ir.actions.act_window">
			<field name="name">خطة الحضور والإنصراف</field>
			<field name="res_model">hr.plan.presence</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		
	   <menuitem name='خطة الحضور والإنصراف' action="action_hr_plan_presence"
			id="menu_hr_plan_presence" parent="menu_attendance_configuration"
			sequence="10" />



	</data>
</openerp>