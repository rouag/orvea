<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- طلبات تحويل ساعات التأخير -->

		<record model="ir.ui.view" id="hr_request_transfer_tree">
			<field name="name">hr.request.transfer.tree</field>
			<field name="model">hr.request.transfer</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="طلبات تحويل ساعات التأخير">
					<field name="name" />
					<field name="employee_id" />
					<field name="date" />
					<field name="number_request" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_request_transfer_form">
			<field name="name">hr.request.transfer.form</field>
			<field name="model">hr.request.transfer</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="طلبات تحويل ساعات التأخير">
					<header>
						<button name="action_waiting" string="إرسال للإعتماد" type="object" states="new" />
						<button name="action_done" string="إعتماد" type="object" states="waiting"  groups="smart_hr.group_dm"/>
						<button name="action_refuse" string="رفض" type="object" states="waiting" groups="smart_hr.group_dm" />
						<field name="state" widget="statusbar" statusbar_visible="new,waiting,done" />
					</header>
					<sheet>
						<h3>
							<field name="name" />
						</h3>
						<group>
							<group string="بيانات الموظف">
								<field name="employee_id"  options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}"/>
								<field name="number" />
								<field name="department_id" />
								<field name="job_id" />
								<field name="grade_id" />
							</group>
							<group string="ساعات التأخير والخروج المبكر">
								<field name="date" />
								<field name="balance"  widget="float_time"/>
								<field name="number_request"  />
							</group>
						</group>
						<group>
							<field name="description" placeholder="ملاحظات ..."
								colspan="4" />
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"
							groups="base.group_user" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_request_transfer_form_inherited">
			<field name="model">hr.request.transfer</field>
			<field name="inherit_id" ref="smart_hr.hr_request_transfer_form" />
			<field name="groups_id" eval="[(6, 0, [ref('smart_hr.group_employee')])]" />
			<field name="arch" type="xml">
				<field name="employee_id" position="attributes">
					<attribute name="readonly">True</attribute>
				</field>
			</field>
		</record>
		
		<record id="hr_request_transfer_search" model="ir.ui.view">
			<field name="name">hr.request.transfer.search</field>
			<field name="model">hr.request.transfer</field>
			<field name="arch" type="xml">
				<search string="طلبات تحويل ساعات التأخير">
					<field name="name" />
					<field name="employee_id" string="الموظف"
							   filter_domain="['|','|',('employee_id.number','ilike',self),('employee_id.identification_id','ilike',self),('employee_id.display_name','ilike',self)]"/>
					<field name="date" />
					<group expand="0" string="تجميع حسب...">
						<filter name="employee_id" string="الموظف" context="{'group_by':'employee_id'}" />
						<filter name="date"  string="التاريخ" context="{'group_by':'date'}" />
						<filter name="state"  string="الحالة" context="{'group_by':'state'}" />
					</group>
				</search>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_hr_request_transfer">
			<field name="name">طلبات تحويل ساعات التأخير</field>
			<field name="res_model">hr.request.transfer</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem id="hr_request_transfer_menu" name="طلبات تحويل ساعات التأخير" groups="smart_hr.group_employee"
			sequence="50" parent="menu_attendance_root" action="action_hr_request_transfer" />
			
			
	</data>
</openerp>
