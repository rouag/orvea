<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <!--
            Attendance View Report
        -->
        <record id="view_tree_hr_attendance_view_report" model="ir.ui.view">
            <field name="name">hr.attendance.view.report.tree</field>
            <field name="model">hr.attendance.view.report</field>
            <field name="arch" type="xml">
                <tree string="الحضور و الانصراف" create="0" delete="0" fonts="bold:True" colors="black:color==1;green:color==2;orange:color==3;red:color==4;grey:color==5" class="oe_tree_view">
                    <field name="day"/>
                    <field name="date"/>
                    <field name="sign_in"/>
                    <field name="sign_out"/>
                    <field name="leave"/>
                    <field name="color" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="action_hr_attendance_view_report" model="ir.actions.act_window">
            <field name="name">الحضور و الانصراف</field>
            <field name="res_model">hr.attendance.view.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</openerp>