<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!--  الأعياد و العطل الرسمية -->

		<record model="ir.ui.view" id="hr_public_holiday_tree">
			<field name="name">hr.public.holiday.tree</field>
			<field name="model">hr.public.holiday</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="الأعياد و العطل الرسمية">
					<field name="name" />
					<field name="date" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="number_of_days" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_public_holiday_form">
			<field name="name">hr.public.holiday.form</field>
			<field name="model">hr.public.holiday</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="الأعياد و العطل الرسمية">
					<header>
						<button name="action_confirm" string="إعتماد" type="object" states="new" />
						<button name="action_done" string="تمت" type="object" states="confirm" />
						<field name="state" widget="statusbar" statusbar_visible="new,candidat,review,confirm,done" />
					</header>
					<sheet>
					<group col= "4">
					<field name="name" />
					<field name="date" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="number_of_days" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_public_holiday">
			<field name="name">الأعياد و العطل الرسمية</field>
			<field name="res_model">hr.public.holiday</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>
		
		<menuitem id="hr_public_holiday_menu" name="الأعياد و العطل الرسمية" groups="smart_hr.group_sys_manager"
			sequence="15" parent="menu_attendance_configuration" action="action_hr_public_holiday" />
 

	</data>
</openerp>
