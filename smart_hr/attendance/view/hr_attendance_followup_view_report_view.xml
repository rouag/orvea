        -->
        <record id="view_tree_hr_attendance_followup_view_report" model="ir.ui.view">
            <field name="name">hr.attendance.followup.view.report.tree</field>
            <field name="model">hr.attendance.followup.view.report</field>
            <field name="arch" type="xml">
                <tree string="المتابعة" create="0" delete="0" fonts="bold:True" class="oe_tree_view">
