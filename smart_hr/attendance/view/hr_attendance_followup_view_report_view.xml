                    <field name="days"/>
                </tree>
            </field>
        </record>
        <record id="action_hr_attendance_followup_view_report" model="ir.actions.act_window">
            <field name="name">المتابعة</field>
            <field name="res_model">hr.attendance.followup.view.report</field>
