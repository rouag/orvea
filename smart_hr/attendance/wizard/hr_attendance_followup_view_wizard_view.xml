<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <!--
            Attendance Follow-Up View Wizard
        -->
        <record id="view_form_hr_attendance_followup_view_wizard" model="ir.ui.view">
            <field name="name">hr.attendance.followup.view.wizard.form</field>
            <field name="model">hr.attendance.followup.view.wizard</field>
            <field name="arch" type="xml">
                <form string="تقرير المتابعة">
                    <group string="معلومات المتابعة">
                        <field name="multi_employee"/>
                        <field name="employee_id"  attrs="{'required':[('multi_employee','=',False)],'invisible':[('multi_employee','=',True)]}"/>
                        <field name="employee_ids"  attrs="{'required':[('multi_employee','=',True)],'invisible':[('multi_employee','=',False)]}"/>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                    </group>
                    <group string="إظهار ؟">
                        <field name="absent"/>
                        <field name="lateness"/>
                        <field name="fingerprint"/>
                    </group>
                    <footer>
                        <button name="button_display" string="عرض" type="object" attrs="{'invisible':[('multi_employee','=',True)]}" icon="fa-list" class="oe_inline oe_stat_button"/>
                        أو
                        <button name="button_print" string="طباعة" type="object" icon="fa-print" class="oe_inline oe_stat_button"/>
                        أو
                        <button string="إلغاء" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_hr_attendance_followup_view_wizard" model="ir.actions.act_window">
            <field name="name">تقرير المتابعة</field>
            <field name="res_model">hr.attendance.followup.view.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_hr_attendance_followup_view_wizard"
                  sequence="10"
                  action="action_hr_attendance_followup_view_wizard"
                  parent="menu_attendance_report"/>

    </data>
</openerp>