<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>



		<record model="ir.ui.view" id="hr_promotion_employee_demande_tree_view">
			<field name="name">hr.promotion.employee.demande.tree</field>
			<field name="model">hr.promotion.employee.demande</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="طلبات الترقية"  delete='0'
					duplicate='0'>
					<field name="name"  />
					<field name="employee_id" />
					<field name="hr_allowance_type_id" />
					<field name="city_fovorite" />
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="hr_promotion_employee_demande_form_view">
			<field name="name">hr.promotion.employee.demande.form</field>
			<field name="model">hr.promotion.employee.demande</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet string="طلبات الترقية">
						<group col="2">
							<field name="create_date" string="تاريخ الطلب" readonly="1" />
						</group>
						<group col="3">
							<group>
								<field name="employee_id" />
								<field name="name" readonly="1"/>
								<field name="city_fovorite" options="{'no_create': True}" required="1"/>
								<field name="hr_allowance_type_id" required="1" />
							</group>
							</group>
							<group col="3" string="رغبات الموظف" >
							<group>
							<field name="description1"  nolabel="1" />
							<field name="description2" nolabel="1" />
							</group>
							<group >
							<field name="description3" nolabel="1" />
							<field name="description4"  nolabel="1"/>
							</group >
							<group >
							<field name="description5"  nolabel="1"/>
							</group>
							</group>
					
							</sheet>
							</form>
							
			</field>
		</record>
		

		<record model="ir.actions.act_window" id="action_promotion_demande">
			<field name="name">طلبات الترقية</field>
			<field name="res_model">hr.promotion.employee.demande</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
 		<menuitem id="menu_promotion_demande" action="action_promotion_demande" parent="hr_root_organisation_action" name="طلبات الترقيات" sequence="13"/>

    </data>
</openerp>