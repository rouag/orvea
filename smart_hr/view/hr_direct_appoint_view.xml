<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="hr_direct_appoint_tree">
			<field name="name">hr.direct.appoint.tree</field>
			<field name="model">hr.direct.appoint</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="قرار مباشرة التعين">
					<field name="employee_id" />
					<field name="number" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_direct_appoint_form">
			<field name="name">hr.direct.appoint.form</field>
			<field name="model">hr.direct.appoint</field>
			<field name="type">form</field>
			<field name="context">{'readonly_by_pass': True}</field>
			<field name="arch" type="xml">
				<form string=" قرار مباشرة التعين" create='0' delete='0' duplicate='0'>
					<header>
						<button name="action_waiting" string=" ارسال طلب" type="object"
							states="new" />

						<field name="state" widget="statusbar" statusbar_visible="new,waiting,done,cancel" />

						<button name="button_cancel_appoint" context="{'operation': 'cancel'}"
							string="إلغاء التعيين" type="object" states="waiting"
							groups="smart_hr.group_personnel_hr" icon="fa-times-circle-o"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_direct_appoint" context="{'operation': 'cancel'}"
							string="مباشرة التعيين" type="object" states="waiting"
							groups="smart_hr.group_personnel_hr" icon="fa-times-circle-o"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />





					</header>
					<sheet>
						<group>
							<group string="بيانات الموظف">
								<field name="employee_id" />
								<field name="number" />
								<field name="country_id" />
								<field name="far_age" />
								<field name="department_id" />
								<field name="date_direct_action" />
								<field name="type_appointment" />
							</group>
							<group string="بيانات الوظيفة">
								<field name="job_id" />
								<field name="number_job" />
								<field name="code" />
								<field name="type_id" />
								<field name="grade_id" />
								<field name="degree_id" />
								<field name="basic_salary" />
								<field name="date" />
							</group>
							

						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_direct_appoint">
			<field name="name"> قرار مباشرة التعين</field>
			<field name="res_model">hr.direct.appoint</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}	</field>
		</record>

		<menuitem id="hr_direct_appoint_menu_sou" name=" قرار مباشرة التعين"
			sequence="22" parent="hr_root_organisation_configuration" action="action_hr_direct_appoint" />

	</data>
</openerp>
