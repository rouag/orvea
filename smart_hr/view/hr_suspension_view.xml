<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <!--
            Suspension Decision
        -->
        <record id="view_form_hr_suspension" model="ir.ui.view">
            <field name="name">hr.suspension.form</field>
            <field name="model">hr.suspension</field>
            <field name="arch" type="xml">
                <form string="قرار كف اليد">
                    <header>
                        <button name="button_hrm" string="إرسال طلب" type="object" states="draft" groups="smart_hr.group_hr" icon="fa-paper-plane" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟"/>
                        <button name="button_done" string="موافقة" type="object" states="hrm" groups="smart_hr.group_hrm" icon="fa-check" class="oe_inline oe_stat_button"/>
                        <button name="%(action_hr_refuse_wizard)d" string="رفض" type="action" states="hrm" groups="smart_hr.group_hrm" icon="fa-times" class="oe_inline oe_stat_button"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,hrm,done"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                                <field name="date" readonly="1"/>
                        </group>
                        <group>
                            <group string="معلومات كف اليد">
                                <field name="employee_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="suspension_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="suspension_end_id" readonly="1"/>
                            </group>
                            <group string="معلومات الخطاب">
                                <field name="letter_sender" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="letter_number" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="letter_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="suspension_attachment" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                        </group>
                        <button name="%(report_hr_suspension_report)d" string="طباعة القرار" type="action" states="done" icon="fa-print" class="oe_inline oe_stat_button"/>
                        <button name="button_suspension_end" string="إنهاء كف اليد" type="object" groups="smart_hr.group_hr,smart_hr.group_hrm" attrs="{'invisible':['|',('state','!=','done'),('suspension_end_id','!=',False)]}" icon="fa-times" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟"/>
                        <div>
                            <field name="message_ids" widget="mail_thread" readonly="1"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_hr_suspension" model="ir.ui.view">
            <field name="name">hr.suspension.tree</field>
            <field name="model">hr.suspension</field>
            <field name="arch" type="xml">
                <tree string="قرارات كف اليد" class="oe_tree_view">
                    <field name="name"/>
                    <field name="suspension_date"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_search_hr_suspension" model="ir.ui.view">
            <field name="name">hr.suspension.search</field>
            <field name="model">hr.suspension</field>
            <field name="arch" type="xml">
                <search string="قرارات كف اليد">
                    <field name="name"/>
                    <field name="suspension_date"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <separator/>
                    <filter string="طلب" domain="[('state','=','draft')]"/>
                    <filter string="مدير شؤون الموظفين" domain="[('state','=','hrm')]"/>
                    <filter string="اعتمدت" domain="[('state','=','done')]"/>
                    <filter string="رفض" domain="[('state','=','refuse')]"/>
                </search>
            </field>
        </record>
        <record id="action_hr_suspension" model="ir.actions.act_window">
            <field name="name">قرارات كف اليد</field>
            <field name="res_model">hr.suspension</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              	<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
            </field>
        </record>
        <menuitem id="menu_hr_suspension"
                  action="action_hr_suspension"
                  parent="menu_hr_suspension_root"
                  sequence="1"
                  name="قرارات كف اليد"/>

    </data>
</openerp>