<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		
		<menuitem id="menu_hr_leave_type_root" parent="hr_root_configuration"
			name="اجازات" sequence="8" />
			
		<!-- Leave Request -->
		<record id="view_form_hr_leave" model="ir.ui.view">
			<field name="name">hr.leave.form</field>
			<field name="model">hr.leave</field>
			<field name="arch" type="xml">
				<form string="طلب أجازة">
					<field name="edit_employee" invisible="1" />
					<field name="is_direct_manager" invisible="1" />
					<field name="is_current_user" invisible="1" />
					<field name="is_extension" invisible="1" />
					<field name="is_extended" invisible="1" />
					<field name="is_cancelled" invisible="1" />
					<field name="is_started" invisible="1" />
					<header name="main">
						<button name="button_dm" string="إرسال طلب" type="object"
							attrs="{'invisible':['|',('state','!=','draft'),('is_current_user','=',False)]}"
							icon="fa-paper-plane" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_hrm" string="موافق" type="object"
							states="audit" groups="smart_hr.group_hr" icon="fa-check"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_done" string="موافق" type="object"
							states="hrm" groups="smart_hr.group_hrm" icon="fa-check"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="%(action_hr_refuse_wizard)d" string="رفض"
							type="action" states="audit" groups="smart_hr.group_hr" icon="fa-times"
							class="oe_inline oe_stat_button" />
						<button name="%(action_hr_refuse_wizard)d" string="رفض"
							type="action" states="hrm" groups="smart_hr.group_hrm" icon="fa-times"
							class="oe_inline oe_stat_button" />
						<button name="button_extend" string="تمديد الإجازة" type="object"
							attrs="{'invisible':['|','|','|','|','|',('state','!=','done'),('is_current_user','=',False),('is_extended','=',True),('is_extension','=',True),('is_cancelled','=',True),('leave_type_id','!=',%(data_hr_leave_type_01)d)]}"
							icon="fa-check" class="oe_inline oe_stat_button" />
						<button name="button_cancel" string="إلغاء الإجازة" type="object"
							attrs="{'invisible':['|','|','|',('state','!=','done'),('is_current_user','=',False),('is_cancelled','=',True),('is_started','=',True)]}"
							icon="fa-times-circle-o" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_draft" string="إعادة فتح الطلب" type="object"
							attrs="{'invisible':['|',('state','!=','refuse'),('is_current_user','=',False)]}"
							icon="fa-check" class="oe_inline oe_stat_button" />
						<field name="state" widget="statusbar" statusbar_visible="draft,dm,audit,hrm,done" />
					</header>
					<header name="dm" attrs="{'invisible':[('state','!=','dm')]}">
						<button name="button_state_approve" string="موافق" type="object"
							attrs="{'invisible':['|',('state','!=','dm'),('is_direct_manager','=',False)]}"
							icon="fa-paper-plane" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="%(action_hr_refuse_wizard)d" string="رفض"
							type="action"
							attrs="{'invisible':['|',('state','!=','dm'),('is_direct_manager','=',False)]}"
							icon="fa-times" class="oe_inline oe_stat_button" />
						<field name="state_dm" widget="statusbar" statusbar_visible="0" />
					</header>
					<sheet>
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" readonly="1" />
						</h1>
						<group string="صاحب الطلب">
							<field name="date" readonly="1" />
							<field name="employee_id" required="1"
								attrs="{'readonly':['|',('edit_employee','=',False),('state','!=','draft')]}" />
						</group>
						<group string="معلومات الإجازة" col="4">
							<field name="extended_leave_id" readonly="1"
								attrs="{'invisible':[('is_extension','=',False)]}" />
							<field name="alternative_employee_id" domain="[('id','!=',employee_id)]"
								attrs="{'readonly':['|','|',('is_current_user','=',True),('is_direct_manager','=',False),('state','!=','dm')],'invisible':['|',('state','=','draft'),('leave_type_id','!=',%(data_hr_leave_type_01)d)]}" />
							<field name="leave_type_id" widget="selection" required="1"
								attrs="{'readonly':['|',('state','!=','draft'),('is_extension','=',True)]}" />
							<field name="leave_type_stock" attrs="{'invisible':[('state','=','done')]}" />
							<field name="relationship"
								attrs="{'invisible':[('leave_type_id','!=',%(data_hr_leave_type_17)d)],'required':[('leave_type_id','=',%(data_hr_leave_type_17)d)]}" />
							<field name="salary_calc_type" groups="smart_hr.group_hr,smart_hr.group_hrm" />
						</group>
						<group col="4">
							<field name="date_from" required="1"
								attrs="{'readonly':['|',('state','!=','draft'),('is_extension','=',True)]}" />
							<field name="date_to" required="1"
								attrs="{'readonly':[('state','!=','draft')]}" />
							<field name="duration" />
						</group>
						<group>
							<field name="notes" attrs="{'readonly':[('state','!=','draft')]}" />
						</group>
						<group string="معلومات إضافية" col="1"
							attrs="{'invisible':[('leave_type_id','in',[%(data_hr_leave_type_01)d,%(data_hr_leave_type_02)d,%(data_hr_leave_type_16)d])]}">
							<group>
								<field name="justification_file" filename="justification_file_fname"
									attrs="{'readonly':[('state','!=','draft')],'invisible':[('leave_type_id','in',[%(data_hr_leave_type_01)d,%(data_hr_leave_type_02)d,%(data_hr_leave_type_03)d,%(data_hr_leave_type_11)d,%(data_hr_leave_type_15)d,%(data_hr_leave_type_16)d])],'required':[('leave_type_id','not in',[%(data_hr_leave_type_01)d,%(data_hr_leave_type_02)d,%(data_hr_leave_type_03)d,%(data_hr_leave_type_10)d,%(data_hr_leave_type_11)d,%(data_hr_leave_type_15)d,%(data_hr_leave_type_16)d]),('state','=','draft')]}" />
								<field name="justification_file_fname" invisible="1" />
							</group>
							<group
								attrs="{'invisible':[('leave_type_id','not in',[%(data_hr_leave_type_03)d,%(data_hr_leave_type_11)d,%(data_hr_leave_type_15)d])]}">
								<field name="hospital"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','in',[%(data_hr_leave_type_03)d,%(data_hr_leave_type_11)d,%(data_hr_leave_type_15)d])]}" />
								<field name="hospital_report_no" attrs="{'readonly':[('state','!=','draft')]}" />
								<field name="hospital_report_date" attrs="{'readonly':[('state','!=','draft')]}" />
								<field name="hospital_attach" filename="hospital_attach_fname"
									attrs="{'readonly':[('state','!=','draft')]}" />
								<field name="hospital_attach_fname" invisible="1" />
							</group>
							<group
								attrs="{'invisible':[('leave_type_id','!=',%(data_hr_leave_type_09)d)]}">
								<field name="aid_letter"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_09)d),('state','=','draft')]}" />
								<field name="aid_letter_no"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_09)d),('state','=','draft')]}" />
								<field name="aid_letter_date"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_09)d),('state','=','draft')]}" />
							</group>
							<group
								attrs="{'invisible':[('leave_type_id','!=',%(data_hr_leave_type_08)d)]}">
								<field name="sport_letter"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_08)d),('state','=','draft')]}" />
								<field name="sport_letter_no"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_08)d),('state','=','draft')]}" />
								<field name="sport_letter_date"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_08)d),('state','=','draft')]}" />
								<field name="sport_reason"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_08)d),('state','=','draft')]}" />
							</group>
							<group
								attrs="{'invisible':[('leave_type_id','!=',%(data_hr_leave_type_05)d)]}">
								<field name="edu_subject"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_05)d),('state','=','draft')]}" />
								<field name="edu_specialty"
									attrs="{'readonly':[('state','!=','draft')],'required':[('leave_type_id','=',%(data_hr_leave_type_05)d),('state','=','draft')]}" />
							</group>
						</group>
						<group>
							<field name="extension_leave_ids" readonly="1"
								attrs="{'invisible':['|','|',('extended_leave_id','!=',False),('leave_type_id','!=',%(data_hr_leave_type_01)d),('extension_leave_ids','=',[])]}" />
							<field name="leave_cancellation_ids" readonly="1"
								attrs="{'invisible':[('leave_cancellation_ids','=',[])]}" />
						</group>
						<button name="%(report_hr_leave_report)d" string="طباعة القرار"
							type="action" states="done" icon="fa-print" class="oe_inline oe_stat_button" />
						<button name="%(report_hr_leave_hospital_transfer_form_report)d"
							string="طباعة نموذج تحويل مستوصف" type="action"
							attrs="{'invisible':['|',('state','!=','draft'),('leave_type_id','!=',%(data_hr_leave_type_03)d)]}"
							icon="fa-print" class="oe_inline oe_stat_button" />
						<div>
							<field name="message_ids" widget="mail_thread" readonly="1" />
						</div>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_tree_hr_leave" model="ir.ui.view">
			<field name="name">hr.leave.tree</field>
			<field name="model">hr.leave</field>
			<field name="arch" type="xml">
				<tree string="طلبات الأجازة" class="oe_tree_view"
					fonts="bold:state in ['draft','done']"
					row_classes="state-refuse:state=='refuse';state-in-progress:state not in ['draft','refuse','done'];">
					<field name="name" />
					<field name="date" />
					<field name="employee_id" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="duration" />
					<field name="leave_type_id" />
					<field name="state" />
				</tree>
			</field>
		</record>
		<record id="view_search_hr_leave" model="ir.ui.view">
			<field name="name">hr.leave.search</field>
			<field name="model">hr.leave</field>
			<field name="arch" type="xml">
				<search string="طلبات الأجازة">
					<field name="name" />
					<field name="date" />
					<field name="employee_id" />
					<field name="alternative_employee_id" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="leave_type_id" />
					<field name="state" />
					<separator />
					<filter string="إجازاتى" name="my_leaves"
						domain="[('employee_id.user_id', '=', uid)]" help="إجازاتى" />
					<filter string="إجازات الموظفين" name="employees_leaves"
						domain="[('employee_id.user_id', '!=', uid)]" help="إجازات الموظفين" />
					<separator />
					<filter string="طلب" name="state_draft" domain="[('state','=','draft')]" />
					<filter string="مدير المباشر" name="state_dm" domain="[('state','=','dm')]" />
					<filter string="تدقيق" name="state_audit" domain="[('state','=','audit')]" />
					<filter string="مدير شؤون الموظفين" name="state_hrm"
						domain="[('state','=','hrm')]" />
					<filter string="اعتمدت" name="state_done" domain="[('state','=','done')]" />
					<filter string="رفض" name="state_refuse" domain="[('state','=','refuse')]" />
					<filter string="ملغاة" name="state_cancel" domain="[('state','=','cancel')]" />
				</search>
			</field>
		</record>
		<!-- My Leaves -->
		<record id="action_hr_leave_my_leaves" model="ir.actions.act_window">
			<field name="name">إجازاتى</field>
			<field name="res_model">hr.leave</field>
			<field name="search_view_id" ref="view_search_hr_leave" />
			<field name="domain">[('employee_id.user_id', '=', uid)]</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_leave_my_leaves" action="action_hr_leave_my_leaves"
			parent="menu_hr_leave_root" sequence="1" name="إجازاتى" />
		<!-- Employees' Leaves -->
		<record id="action_hr_leave_employees_leaves" model="ir.actions.act_window">
			<field name="name">إجازات الموظفين</field>
			<field name="res_model">hr.leave</field>
			<field name="search_view_id" ref="view_search_hr_leave" />
			<field name="domain">[('employee_id.user_id', '!=', uid),('state', '!=',
				'draft')]</field>
			<field name="context">{'search_default_state_dm':1,'default_edit_employee':1,'default_employee_id':False}
			</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_leave_employees_leaves" action="action_hr_leave_employees_leaves"
			parent="menu_hr_leave_root" sequence="2"
			groups="smart_hr.group_dm,smart_hr.group_hrm,smart_hr.group_adm,smart_hr.group_followup_manager"
			name="إجازات الموظفين" />
		<!-- HR Audit -->
		<record id="action_hr_leave_audit" model="ir.actions.act_window">
			<field name="name">فى انتظار التدقيق</field>
			<field name="res_model">hr.leave</field>
			<field name="search_view_id" ref="view_search_hr_leave" />
			<field name="domain">[('state','=','audit')]</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_leave_audit" action="action_hr_leave_audit"
			parent="menu_hr_leave_root" sequence="3" groups="smart_hr.group_hr"
			name="فى انتظار التدقيق" />
		<!-- HRM -->
		<record id="action_hr_leave_hrm" model="ir.actions.act_window">
			<field name="name">فى انتظار الأعتماد</field>
			<field name="res_model">hr.leave</field>
			<field name="search_view_id" ref="view_search_hr_leave" />
			<field name="domain">[('state','=','hrm')]</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_leave_hrm" action="action_hr_leave_hrm"
			parent="menu_hr_leave_root" sequence="4" groups="smart_hr.group_hrm"
			name="فى انتظار الأعتماد" />
		<!-- In Progress -->
		<record id="action_hr_leave_in_progress" model="ir.actions.act_window">
			<field name="name">تحت الإجراء</field>
			<field name="res_model">hr.leave</field>
			<field name="search_view_id" ref="view_search_hr_leave" />
			<field name="domain">[('state','in',['dm','audit','hrm'])]</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_leave_in_progress" action="action_hr_leave_in_progress"
			parent="menu_hr_leave_root" sequence="5" groups="smart_hr.group_hr"
			name="تحت الإجراء" />
		<!-- Leaves Archive -->
		<record id="action_hr_leave_archive" model="ir.actions.act_window">
			<field name="name">أرشيف الإجازات</field>
			<field name="res_model">hr.leave</field>
			<field name="search_view_id" ref="view_search_hr_leave" />
			<field name="domain">[('state','!=','draft')]</field>
			<field name="context">{'search_default_state_done':1,'search_default_state_refuse':1,'search_default_state_cancel':1}
			</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_leave_archive" action="action_hr_leave_archive"
			parent="menu_hr_leave_root" sequence="6"
			groups="smart_hr.group_hr,smart_hr.group_followup" name="أرشيف الإجازات" />

		<!-- Leave Type -->
		<record id="view_form_hr_leave_type" model="ir.ui.view">
			<field name="name">hr.leave.type.form</field>
			<field name="model">hr.leave.type</field>
			<field name="arch" type="xml">
				<form string="نوع الأجازة">
					<sheet>
						<group>
							<field name="name" required="1" />
							<field name="leave_stock_open" />
							<field name="leave_stock_default"
								attrs="{'invisible':[('leave_stock_open', '=', True)]}" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_tree_hr_leave_type" model="ir.ui.view">
			<field name="name">hr.leave.type.tree</field>
			<field name="model">hr.leave.type</field>
			<field name="arch" type="xml">
				<tree string="أنواع الأجازات">
					<field name="name" />
					<field name="leave_stock_open" />
					<field name="leave_stock_default" />
				</tree>
			</field>
		</record>
		<record id="action_hr_leave_type" model="ir.actions.act_window">
			<field name="name">أنواع الأجازات</field>
			<field name="res_model">hr.leave.type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_leave_type" action="action_hr_leave_type"
			parent="menu_hr_leave_type_root" name="أنواع الأجازات" />

	</data>
</openerp>