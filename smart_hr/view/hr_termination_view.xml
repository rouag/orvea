<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <!--
            Termination Decision
        -->
        <record id="view_form_hr_termination" model="ir.ui.view">
            <field name="name">hr.termination.form</field>
            <field name="model">hr.termination</field>
            <field name="arch" type="xml">
                <form string="قرار طى القيد">
                    <header>
                        <button name="button_hrm" string="ارسال الطلب" type="object" states="draft" groups="smart_hr.group_hr" icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟"/>
                        <button name="button_done" string="موافق" type="object" states="hrm" groups="smart_hr.group_hrm" icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟"/>
                        <button name="button_refuse" string="رفض" type="object" states="hrm" groups="smart_hr.group_hrm" icon="fa-times" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,hrm,done"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                             <field name="employee_state" invisible="1"/>
                        </h1>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="employee_id" required="1" attrs="{'readonly':[('employee_state','!=','new')]}" domain="[('job_id.deputed_employee','=',False)]"/>
                        </group>
                        <group>
                            <group string="معلومات الموظف">
                                <field name="employee_no" readonly="1"/>
                                <field name="job_id" readonly="1"/>
                       <!--          <field name="level" readonly="1"/>
                                <field name="degree" readonly="1"/> -->
                                <field name="join_date" readonly="1"/>
                                <field name="age" readonly="1"/>
                            </group>
                            <group string="معلومات طي القيد">
                                <field name="termination_type_id" widget="selection" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="reason" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group string="معلومات الخطاب">
                                <field name="letter_source" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="letter_no" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="letter_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="file_attachment" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                        </group>
                        <button name="%(report_hr_termination_report)d" string="طباعة القرار" type="action" states="done" icon="fa-print" class="oe_inline oe_stat_button"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_hr_termination" model="ir.ui.view">
            <field name="name">hr.termination.tree</field>
            <field name="model">hr.termination</field>
            <field name="arch" type="xml">
                <tree string="قرارات طى القيد" class="oe_tree_view">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="termination_type_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_search_hr_termination" model="ir.ui.view">
            <field name="name">hr.termination.search</field>
            <field name="model">hr.termination</field>
            <field name="arch" type="xml">
                <search string="قرارات طى القيد">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="termination_type_id"/>
                    <field name="state"/>
                    <separator/>
                    <filter string="طلب" domain="[('state','=','draft')]"/>
                    <filter string="مدير شؤون الموظفين" domain="[('state','=','hrm')]"/>
                    <filter string="اعتمدت" domain="[('state','=','done')]"/>
                    <filter string="رفض" domain="[('state','=','refuse')]"/>
                </search>
            </field>
        </record>
        <record id="action_hr_termination" model="ir.actions.act_window">
            <field name="name">قرارات طى القيد</field>
            <field name="res_model">hr.termination</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_hr_termination"
                  action="action_hr_termination"
                  parent="menu_hr_termination_root"
                  name="قرارات طى القيد"/>

        <!--
            Termination Type
        -->
        <record id="view_form_hr_termination_type" model="ir.ui.view">
            <field name="name">hr.termination.type.form</field>
            <field name="model">hr.termination.type</field>
            <field name="arch" type="xml">
                <form string="نوع طى القيد">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_hr_termination_type" model="ir.ui.view">
            <field name="name">hr.termination.type.tree</field>
            <field name="model">hr.termination.type</field>
            <field name="arch" type="xml">
                <tree string="أنواع طى القيد" class="oe_tree_view">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="action_hr_termination_type" model="ir.actions.act_window">
            <field name="name">أنواع طى القيد</field>
            <field name="res_model">hr.termination.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              	<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
            </field>
        </record>
        <menuitem id="menu_hr_termination_type"
                  action="action_hr_termination_type"
                  parent="menu_hr_termination_conf_root"
                  name="أنواع طى القيد"/>

    </data>
</openerp>