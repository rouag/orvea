<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- التعيين -->

		<record model="ir.ui.view" id="hr_decision_appoint_tree">
			<field name="name">hr.decision.appoint.tree</field>
			<field name="model">hr.decision.appoint</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="قرار تعيين">
					<field name="name" />
					<field name="order_date" />
					<field name="date_hiring" />
					<field name="type_appointment" />
					<field name="instead_exchange" />
					<field name="date_direct_action" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_decision_appoint_form">
			<field name="name">hr.decision.appoint.form</field>
			<field name="model">hr.decision.appoint</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="قرار تعيين">
					<header>
						<button name="action_waiting" string="إرسال للإعتماد" type="object"
							states="new" />
						<button name="action_done" string="إعتماد" type="object"
							states="waiting" />
						<button name="action_refuse" string="رفض" type="object"
							states="waiting" />
						<field name="state" widget="statusbar" statusbar_visible="new,waiting,done" />
					</header>
					<sheet>
						<group>
							<group string="بيانات الموظف">
								<field name="name" />
								<field name="order_date" />
								<field name="order_picture" />
								<field name="medical_examination_file" />
								<field name="order_enquiry_file" />
							</group>
							<group string="بيانات الموظف">
								<field name="date_hiring" />
								<field name="type_appointment" />
								<field name="instead_exchange" />
								<field name="date_direct_action" />
							</group>
							<group string="بيانات الموظف">
								<field name="employee_id" domain="[('employee_state','=','done')]" />
								<field name="number" />
							</group>
							<group string="بيانات الوظيفة">
								<field name="job_id" />
								<field name="number_job" />
								<field name="type_id" />
								<field name="department_id" />
								<field name="grade_id" />
								<field name="degree_id" domain="[('grade_id','=',grade_id)]" />
							</group>

						</group>
						<group>
							<field name="description" placeholder="ملاحظات ..."
								colspan="4" />
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"
							groups="base.group_user" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_decision_appoint">
			<field name="name">التعيين</field>
			<field name="res_model">hr.decision.appoint</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>
		<menuitem id="hr_decision_appoint_menu" name="التعيين"
			sequence="10" parent="hr_root_organisation_action" action="action_hr_decision_appoint" />
	</data>
</openerp>
