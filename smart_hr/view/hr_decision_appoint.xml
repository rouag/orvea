<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>


		<record model="ir.ui.view" id="hr_notices_settings_tree">
			<field name="name">hr.notices.settings.tree</field>
			<field name="model">hr.notices.settings</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="اشعارات التعين">
					<field name="name" />
					<field name="description" />
					<field name="group_notice" />
					<field name="tye_notice_mail" />
					<field name="tye_notice_sms" />
					<field name="tye_notice_event" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_notices_settings_form">
			<field name="name">hr.notices.settings.form</field>
			<field name="model">hr.notices.settings</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="اشعارات التعين">
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="description" />
								<field name="group_notice" />
							</group>
							<group>
								<field name="tye_notice_mail" />
								<field name="tye_notice_sms" />
								<field name="tye_notice_event" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_notices_settings">
			<field name="name"> اشعارات التعين</field>
			<field name="res_model">hr.notices.settings</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="hr_notices_settings_menu" name=" إعدادات الاشعارات"
			sequence="30" parent="hr_root_organisation_configuration" />

		<menuitem id="hr_notices_settings_menu_sou" name=" اشعارات التعين"
			sequence="5" parent="hr_notices_settings_menu" action="action_hr_notices_settings" />

		<record model="ir.ui.view" id="hr_type_appoint_tree">
			<field name="name">hr.type.appoint.tree</field>
			<field name="model">hr.type.appoint</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="أنواع التعين">
					<field name="name" />
					<field name="date_test" />
					<field name="code" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_type_appoint_form">
			<field name="name">hr.type.appoint.form</field>
			<field name="model">hr.type.appoint</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string=" أنواع التعين">
					<sheet>
						<group>
							<field name="name" />
							<field name="date_test" />
							<field name="code" />
						</group>
						<group string="المخطط‬‫ الانسيابي‬">
							<field name="audit" />
							<field name="recrutment_manager" />
							<field name="enterview_manager" />
							<field name="personnel_hr" />
							<field name="recrutment_decider" />

						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_type_appoint">
			<field name="name"> أنواع التعين</field>
			<field name="res_model">hr.type.appoint</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="hr_type_appoint_menu_sou" name=" أنواع التعين"
			sequence="25" parent="hr_root_organisation_configuration" action="action_hr_type_appoint" />


		<!-- التعيين -->

		<record model="ir.ui.view" id="hr_decision_appoint_tree">
			<field name="name">hr.decision.appoint.tree</field>
			<field name="model">hr.decision.appoint</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="التعيين">
					<field name="name" />
					<field name="order_date" />
					<field name="date_hiring" />
					<field name="type_appointment" />
					<field name="date_direct_action" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_decision_appoint_form">
			<field name="name">hr.decision.appoint.form</field>
			<field name="model">hr.decision.appoint</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="التعيين">
					<header>
						<button name="send_appoint_request" string="إرسال " type="object"
							groups="smart_hr.group_manager_appointment" states="draft"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_accept_audit" string="موافق" type="object"
							states="audit" groups="smart_hr.group_audit_appointment" icon="fa-check"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_refuse_audit" string="رفض" type="object"
							states="audit" groups="smart_hr.group_audit_appointment" icon="fa-times"
							class="oe_inline oe_stat_button" />


						<button name="button_accept_enterview_manager" string="موافق"
							type="object" states="waiting" groups="smart_hr.group_enterview_manager"
							icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_refuse_enterview_manager" string="رفض"
							type="object" states="waiting" groups="smart_hr.group_enterview_manager"
							icon="fa-times" class="oe_inline oe_stat_button" />

						<button name="button_accept_recrutment_manager" string="موافق"
							type="object" states="manager" groups="smart_hr.group_recrutment_manager"
							icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_refuse_recrutment_manager" string="رفض"
							type="object" states="manager" groups="smart_hr.group_recrutment_manager"
							icon="fa-times" class="oe_inline oe_stat_button" />

						<button name="button_accept_recrutment_decider" string="موافق"
							type="object" states="budget" groups="smart_hr.group_recrutment_decider"
							icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_refuse_recrutment_decider" string="رفض"
							type="object" states="budget" groups="smart_hr.group_recrutment_decider"
							icon="fa-times" class="oe_inline oe_stat_button" />




						<button name="button_accept_direct" string="موافق" type="object"
							states="direct" groups="smart_hr.group_dm" icon="fa-check"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_refuse_direct" string="رفض" type="object"
							states="direct" groups="smart_hr.group_dm" icon="fa-times"
							class="oe_inline oe_stat_button" />



						<button name="button_accept_personnel_hr" string="موافق"
							type="object" states="hrm" groups="smart_hr.group_personnel_hr"
							icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_refuse_personnel_hr" string="رفض"
							type="object" states="hrm" groups="smart_hr.group_personnel_hr"
							icon="fa-times" class="oe_inline oe_stat_button" />

						<button name="button_cancel_appoint" context="{'operation': 'cancel'}"
							string="إلغاء التعيين" type="object" states="done"
							groups="smart_hr.group_personnel_hr" icon="fa-times-circle-o"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_direct_appoint" context="{'operation': 'cancel'}"
							string="مباشرة التعيين" type="object" states="done"
							groups="smart_hr.group_personnel_hr" icon="fa-times-circle-o"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />



						<field name="state" widget="statusbar"
							statusbar_visible="draft,audit,waiting,manager,budget,hrm,direct,done,refuse" />
					</header>

					<sheet>
						<group>
							<group>
								<field name="date_hiring"
									attrs="{'invisible':[('state', 'not in', ['draft','audit','waiting','manager',  'budget','hrm','direct', 'done'])],'readonly':[('state', 'in', [ 'audit','waiting','manager',  'budget','hrm','direct', 'done'])]}" />
								<field name="type_appointment" options="{'no_create_edit': True}"
									attrs="{'invisible':[('state', 'not in', ['draft','audit','waiting','manager',  'budget','hrm','direct', 'done'])],'readonly':[('state', 'in', [ 'audit','waiting','manager',  'budget','hrm','direct', 'done'])]}" />
							</group>
						</group>
						<group>
							<group string="بيانات القرار">
								<field name="name"
									attrs="{'invisible':[('state', 'not in', ['draft','audit','waiting','manager',  'budget','hrm','direct', 'done'])],'readonly':[('state', 'in', [ 'audit','waiting','manager',  'budget','hrm','direct', 'done'])]}" />
								<field name="order_date"
									attrs="{'invisible':[('state', 'not in', ['draft','audit','waiting','manager',  'budget','hrm','direct', 'done'])],'readonly':[('state', 'in', [ 'audit','waiting','manager',  'budget','hrm','direct', 'done'])]}" />
								<field name="order_picture"
									attrs="{'invisible':[('state', 'not in', ['draft','audit','waiting','manager',  'budget','hrm','direct', 'done'])],'readonly':[('state', 'in', [ 'audit','waiting','manager',  'budget','hrm','direct', 'done'])]}" />
								<field name="file_appoint"
									attrs="{'invisible':[('state', 'not in', ['hrm'])],'required':[('state','=','hrm')]}" />
								<field name="file_decision"
									attrs="{'invisible':[('state', 'not in', ['hrm'])],'required':[('state','=','hrm')]}" />

							</group>
							<group string="بيانات التعيين">

								<field name="date_direct_action"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'done'])]}" />
								<field name="date_hiring_end"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
								<field name="state_appoint"
									attrs="{'invisible':[('state', 'not in', [ 'done'])],'readonly':[('state', 'in', [ 'done'])]}" />
								<field name="transport_alocation"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
								<field name="transport_car"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
							</group>
							<group string="بيانات الموظف">
								<field name="employee_id"
									attrs="{'invisible':[('state', 'not in', ['draft','audit','waiting','manager',  'budget','hrm','direct', 'done'])],'readonly':[('state', 'in', [ 'audit','waiting','manager',  'budget','hrm','direct', 'done'])]}" />
								<field name="number" />
								<field name="country_id" />
								<field name="emp_job_id" />
								<field name="emp_number_job" />
								<field name="emp_type_id" />
								<field name="emp_department_id" />
								<field name="emp_grade_id" />
								<field name="emp_degree_id" />
								<field name="emp_far_age" />
								<field name="emp_basic_salary" />

								<field name="medical_examination_file"
									attrs="{'invisible':[('state', 'not in', ['waiting', 'hrm', 'budget', 'done']),
									('type_appointment','not in', [%(data_hr_new_agent_public)d])],
									'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done']),('type_appointment','not in', [%(data_hr_recrute_agent_public)d])]}" />
								
								
								
								<field name="order_enquiry_file"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
								<field name="file_salar_recent"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
								<field name="file_engagement" widget="many2many_binary"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
							</group>
							<group string="بيانات الوظيفة">
								<field name="job_id" domain="[('state','=','unoccupied')]"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
								<field name="number_job" />
								<field name="type_id" />
								<field name="department_id" />
								<field name="grade_id" />
								<field name="degree_id" domain="[('grade_id','=',grade_id)]"
									attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
								<field name="far_age" />
								<field name="basic_salary" />
								<field name="transport_allow" />
								<field name="retirement" />
								<field name="net_salary" />
							</group>
						</group>
						<group>
							<field name="description" placeholder="ملاحظات ..."
								colspan="4"
								attrs="{'invisible':[('state', 'not in', ['draft','waiting', 'hrm', 'budget', 'done'])],'readonly':[('state', 'in', [ 'waiting', 'hrm', 'budget', 'done'])]}" />
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"
							groups="base.group_user" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_decision_appoint">
			<field name="name">التعيين</field>
			<field name="res_model">hr.decision.appoint</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>
		<menuitem id="hr_decision_appoint_menu" name="التعيين"
			sequence="10" parent="hr_root_organisation_action" action="action_hr_decision_appoint" />
	</data>
</openerp>
