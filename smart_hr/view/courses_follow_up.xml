<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>


		<record id="courses_followup_form" model="ir.ui.view">
			<field name="name">courses.followup.form</field>
			<field name="model">courses.followup</field>
			<field name="arch" type="xml">
				<form string="الدورات الدراسيّة ">
					<header>
						<button name="action_start" string="إرسال طلب" type="object"
							attrs="{'invisible':[('state','!=','draft')]}" icon="fa-paper-plane"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />


						<button name="action_done" string="نهاية الدورة" type="object"
							states="progress" icon="fa-times" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<field name="state" widget="statusbar" statusbar_visible="draft,progress,done" />
					</header>
					<sheet>
						<group >
							<group >
								<field name="name" />
							</group>
							<group></group>
						</group>
						<group >
							<group >
								<field name="employee_id" />
							</group>
							<group></group>
						</group>
						<group >
						<group >
							<field name="date_from"/>
							</group>
							<group>
							<field name="date_to"  />
						</group>
						</group>
							<group >
							<group >
								<field name="result" />
							</group>
							<group></group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="courses_followup_tree" model="ir.ui.view">
			<field name="name">courses.followup.tree</field>
			<field name="model">courses.followup</field>
			<field name="arch" type="xml">
				<tree string="الدورات الدراسيّة">
					<field name="employee_id" />
					<field name="name" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="result" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_courses_followup">
			<field name="name">متابعة الدورات الدراسيّة</field>
			<field name="res_model">courses.followup</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('result','=',False)]</field>
		</record>
		<!-- config menu -->
		<menuitem id="hr_configuration_courses_followup" name="الدورات الدراسيّة"
			parent="menu_hr_holiday_root" sequence="54" action="action_courses_followup" />
	</data>
</openerp>