<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>


		<record id="courses_followup_form" model="ir.ui.view">
			<field name="name">courses.followup.form</field>
			<field name="model">courses.followup</field>
			<field name="arch" type="xml">
				<form string="الدورات الدراسيّة ">
					<header>
						<button name="send_courses_request" string="بداية الدورة"
							type="object"
							attrs="{'invisible':[('state','!=','draft')]}"
							icon="fa-paper-plane" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />


						<button name="action_done" string="نهاية الدورة" type="object"
							states="progress"  icon="fa-times"
							class="oe_inline oe_stat_button" />
							
						<field name="state" widget="statusbar" statusbar_visible="draft,progress,cancel" />
					</header>
					<sheet>
						<group>

							<field name="employee_id" colspan="1" />
							<field name="name" />
							<field name="date_from" />
							<field name="date_to" />
							<field name="result" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="courses_followup_tree" model="ir.ui.view">
			<field name="name">courses.followup.tree</field>
			<field name="model">courses.followup</field>
			<field name="arch" type="xml">
				<tree string="الدورات الدراسيّة">
					<field name="employee_id" />
					<field name="name" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="result" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_courses_followup">
			<field name="name">متابعة الدورات الدراسيّة</field>
			<field name="res_model">courses.followup</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('result','=',False)]</field>
		</record>
		<!-- config menu -->
		<menuitem id="hr_configuration_courses_followup" name="الدورات الدراسيّة"
			sequence="20" parent="hr_root_employees" action="action_courses_followup" />
	</data>
</openerp>