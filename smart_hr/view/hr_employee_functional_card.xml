<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

		<record id="view_form_hr_employee_issuing_functionnal_card"
			model="ir.ui.view">
			<field name="name">hr.employee.issuing.functionnal.card.form</field>
			<field name="model">hr.employee.issuing.functionnal.card</field>
			<field name="arch" type="xml">
				<form string="اصدار بطاقة وظيفية">

					<header name="main">
						<button name="button_send_request" string="إرسال طلب" type="object"
							states="draft" icon="fa-paper-plane" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_accept_hrm" string="موافق" type="object"
							states="hrm" groups="smart_hr.group_hrm" icon="fa-check"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="button_refuse_hrm" string="رفض" type="object"
							states="hrm" groups="smart_hr.group_hrm"
							icon="fa-times" class="oe_inline oe_stat_button" />
						<field name="state" widget="statusbar" statusbar_visible="draft,,hrm,done,refuse" />
					</header>
					<sheet>

						<group>
							<field name="employee_ids" required="1" />
							<field name="date" />
							<field name="expiration_date"
								attrs="{'invisible':[('state','=', 'draft')],'required':[('state','=', 'hrm')]}" />

						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_tree_hr_employee_issuing_functionnal_card"
			model="ir.ui.view">
			<field name="name">hr.employee.issuing.functionnal.card.tree</field>
			<field name="model">hr.employee.issuing.functionnal.card</field>
			<field name="arch" type="xml">
				<tree string="اصدار بطاقة وظيفية" class="oe_tree_view">
					<field name="employee_ids" required="1" />
					<field name="date" />
					<field name="expiration_date" />
				</tree>
			</field>
		</record>
		<record id="action_hr_employee_issuing_functionnal_card" model="ir.actions.act_window">
			<field name="name">اصدار بطاقة وظيفية</field>
			<field name="res_model">hr.employee.issuing.functionnal.card</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>

		<menuitem id="menu_hr_employee_issuing_functionnal_card"
			action="action_hr_employee_issuing_functionnal_card" sequence="5"
			parent="smart_hr.hr_root_functionnal_card_management" />
			
		<record id="view_form_hr_employee_functionnal_card"
			model="ir.ui.view">
			<field name="name">hr.employee.functionnal.card.form</field>
			<field name="model">hr.employee.functionnal.card</field>
			<field name="arch" type="xml">
				<form string=" بطاقة وظيفية">

					<sheet>

						<group>
							<field name="employee_id" required="1" />

						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_tree_hr_employee_functionnal_card"
			model="ir.ui.view">
			<field name="name">hr.employee.functionnal.card.tree</field>
			<field name="model">hr.employee.functionnal.card</field>
			<field name="arch" type="xml">
				<tree string=" بطاقة وظيفية" class="oe_tree_view">
					<field name="employee_id" required="1" />

				</tree>
			</field>
		</record>
		<record id="action_hr_employee_functionnal_card" model="ir.actions.act_window">
			<field name="name">اصدار بطاقة وظيفية</field>
			<field name="res_model">hr.employee.functionnal.card</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>

		<menuitem id="menu_hr_employee_functionnal_card"
			action="action_hr_employee_functionnal_card" sequence="10"
			parent="smart_hr.hr_root_functionnal_card_management" />			
	</data>
</openerp>
			