<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- الطلبات -->

		<record model="ir.ui.view" id="hr_holidays_tree">
			<field name="name">hr.holidays.tree</field>
			<field name="model">hr.holidays</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="hr_holidays.view_holiday_allocation_tree" />
			<field name="arch" type="xml">
				<xpath expr="/tree" position='replace'>
					<tree string="طلبات الاجازات">
						<field name="name" string="الرمز" />
						<field name="employee_id" />
						<field name="holiday_status_id" />
						<field name="date_from" />
						<field name="date_to" />
						<field name="duration" />
						<field name="state" />
					</tree>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_holidays_form">
			<field name="name">hr.holidays.form</field>
			<field name="model">hr.holidays</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="الطلبات">
					<field name="is_current_user" invisible="1" />
					<field name="is_extension" invisible="1" />
					<field name="is_extended" invisible="1" />
					<field name="is_cancelled" invisible="1" />
					<field name="is_started" invisible="1" />
					<field name="is_delayed" invisible="1" />
					<field name="is_extensible" invisible="1" />
					<header name="main">
						<button name="send_holiday_request" string="إرسال طلب"
							type="object"
							attrs="{'invisible':['|',('state','!=','draft'),('is_current_user','=',False)]}"
							icon="fa-paper-plane" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_accept_dm" string="موافق" type="object"
							states="dm" groups="smart_hr.group_dm" icon="fa-check"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="action_delay_holiday" string="تأجيل" type="object"
							states="dm" groups="smart_hr.group_dm" icon="fa-times"
							class="oe_inline oe_stat_button" />


						<button name="button_accept_audit" string="موافق" type="object"
							states="audit" groups="smart_hr.group_holidays_checker" icon="fa-check"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_refuse_audit" string="رفض" type="object"
							states="audit" groups="smart_hr.group_holidays_checker" icon="fa-times"
							class="oe_inline oe_stat_button" />

						<button name="button_accept_hrm" string="موافق" type="object"
							states="hrm" groups="smart_hr.group_hrm" icon="fa-check"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_accept_external_audit" string="موافق"
							type="object" states="external_audit" groups="smart_hr.group_holidays_checker"
							icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_refuse_external_audit" string="رفض"
							type="object" states="external_audit" groups="smart_hr.group_holidays_checker"
							icon="fa-times" class="oe_inline oe_stat_button" />

						<button name="button_accept_revision" string="موافق" type="object"
							states="revision" groups="smart_hr.group_director_division_salaries_vacations"
							icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_refuse_revision" string="رفض" type="object"
							states="revision" groups="smart_hr.group_director_division_salaries_vacations"
							icon="fa-times" class="oe_inline oe_stat_button" />

						<button name="button_accept_revision_response" string="موافق"
							type="object" states="revision_response" groups="smart_hr.group_holidays_checker"
							icon="fa-times" class="oe_inline oe_stat_button" />

						<button name="button_refuse_revision_response" string="رفض"
							type="object" states="revision_response" groups="smart_hr.group_holidays_checker"
							icon="fa-times" class="oe_inline oe_stat_button" />


						<button name="button_extend" string="تمديد الإجازة"
							attrs="{'invisible':['|','|',('state', '!=', 'done'),('is_extensible', '=', 0),('is_current_user','=',False)] } "
							type="object" icon="fa-check" class="oe_inline oe_stat_button" />

						<button name="button_cancel" context="{'operation': 'cancel'}"
							string="إلغاء الإجازة" type="object"
							attrs="{'invisible':['|','|','|',('state','!=','done'),('is_current_user','=',False),('is_cancelled','=',True),('is_started','=',True)]}"
							icon="fa-times-circle-o" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="button_cut" context="{'operation': 'cut'}"
							string="قطع الاجازة" type="object"
							attrs="{'invisible':['|','|','|',('state','!=','done'),('is_current_user','=',False),('is_cancelled','=',True),('is_started','=',False)]}"
							icon="fa-times-circle-o" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<field name="state" widget="statusbar"
							statusbar_visible="draft,dm,audit,hrm,external_audit,revision,revision_response,done,cancel,cutoff" />
					</header>
					<sheet>
						<div class="col-md-12" attrs="{'invisible':[('is_delayed','=',False)]}">
							<center>
								<h3>طلب معدل للتأجيل</h3>
							</center>
						</div>
						<group string="صاحب الطلب">
							<field name="date" readonly="1" />
							<field name="employee_id" required="1" readonly='1' />
							<field name="external_authoritie"
								attrs="{'invisible':[('state','!=','external_audit')]}"
								readonly='1' />

						</group>
						<group col="2">
							<field name="holiday_status_id" options="{'no_create_edit': True}"
								required="1" />
						</group>
						<group>
							<field name="study_subject"
								attrs="{'invisible':[('holiday_status_id','!=', %(data_hr_holiday_status_study)d)],
								'required':[('holiday_status_id','=', %(data_hr_holiday_status_study)d)]}" />

						</group>
						<group col="6">
							<field name="accompaniment_type"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','!=', %(data_hr_holiday_accompaniment_exceptional)d)],
								'required':[('holiday_status_id','=', %(data_hr_holiday_accompaniment_exceptional)d)]}" />
							<field name="accompanied_child_age"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':['|',('holiday_status_id','!=', %(data_hr_holiday_accompaniment_exceptional)d),('accompaniment_type','!=','child')],
								'required':[('holiday_status_id','=', %(data_hr_holiday_accompaniment_exceptional)d),('accompaniment_type','=','child')]}" />

							<field name="birth_certificate"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','!=', %(data_hr_holiday_child_birth_dad)d),'|',('holiday_status_id','!=', %(data_hr_holiday_accompaniment_exceptional)d),('accompaniment_type','!=','child')],
								'required':[('holiday_status_id','=', %(data_hr_holiday_child_birth_dad)d),'&amp;',('holiday_status_id','=', %(data_hr_holiday_accompaniment_exceptional)d),('accompaniment_type','=','child')]}" />

						</group>
						<group>

							<field name="entitlement_type" options="{'no_create_edit': True}"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','not in', [%(data_hr_holiday_death)d, %(data_hr_holiday_status_illness)d, %(data_hr_holiday_accompaniment_exceptional)d,%(data_hr_holiday_status_sport)d ])],
								'required':[('holiday_status_id','in', [%(data_hr_holiday_death)d, %(data_hr_holiday_status_illness)d, %(data_hr_holiday_accompaniment_exceptional)d,%(data_hr_holiday_status_sport)d  ])]}" />
						</group>
						<group>
							<field name="death_person"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','!=', %(data_hr_holiday_death)d)],
								'required':[('holiday_status_id','=', %(data_hr_holiday_death)d)]}" />
						</group>
						<group>

							<field name="medical_certification"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','not in', [%(data_hr_holiday_status_illness)d, %(data_hr_holiday_accompaniment_exceptional)d])],
								'required':[('holiday_status_id','in', [%(data_hr_holiday_status_illness)d, %(data_hr_holiday_accompaniment_exceptional)d])]}" />
						</group>
						<group>
							<field name="raison"
								attrs="{'readonly':[('state','not in',['draft'])],'invisible':[('holiday_status_id','!=', %(data_hr_holiday_status_exceptional_accompaniment)d)]}" />
							<field name="childbirth_date"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','not in', (%(data_hr_holiday_status_childbirth)d,%(data_hr_holiday_child_birth_dad)d,%(data_hr_holiday_status_maternity)d))],
								'required':[('holiday_status_id','in', (%(data_hr_holiday_status_childbirth)d,%(data_hr_holiday_child_birth_dad)d,%(data_hr_holiday_status_maternity)d))]}" />
						</group>
						<group>
							<field name="medical_certificate"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','!=', %(data_hr_holiday_status_childbirth)d)],
								'required':[('holiday_status_id','=', %(data_hr_holiday_status_childbirth)d)]}" />
						</group>
						<group>
							<field name="medical_report"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','!=', %(data_hr_holiday_dialysis)d)],
								'required':[('holiday_status_id','=', %(data_hr_holiday_dialysis)d)]}" />
						</group>
						<group>
							<field name="prove_exam_duration"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','!=', %(data_hr_holiday_exam)d)],
								'required':[('holiday_status_id','=', %(data_hr_holiday_exam)d)]}" />
						</group>
						<group>
							<field name="compensation_stock" readonly="True"
								attrs="{'invisible':[('holiday_status_id','!=', %(data_hr_holiday_compensation)d)]}" />
						</group>
						<group>
							<field name="compensation_type"
								attrs="{'readonly':[('state','not in',['draft'])],
								'invisible':[('holiday_status_id','!=', %(data_hr_holiday_compensation)d)],
								'required':[('holiday_status_id','=', %(data_hr_holiday_compensation)d)]}" />
						</group>

						<group col="6">
							<field name="date_from" required="1"
								attrs="{'readonly':['|',('state','not in',['draft']),('is_extension','=',True)],
								'invisible':[('compensation_type','=','money')]}" />
							<field name="duration"
								attrs="{'readonly':[('state','!=','draft')],'invisible':[('compensation_type','=','money')]}" />
							<field name="date_to" readonly="1"
								attrs="{'invisible':[('compensation_type','=','money')]}" />
						</group>
						<group col="4">
							<field name="num_outspeech"
								attrs="{'readonly':[('state','!=','external_audit')], 'invisible':[('state','not in',['external_audit','revision', 'revision_response','done'])]}" />
							<field name="date_outspeech"
								attrs="{'readonly':[('state','!=','external_audit')], 'invisible':[('state','not in',['external_audit','revision', 'revision_response','done'])]}" />
							<field name="outspeech_file"
								attrs="{'readonly':[('state','!=','external_audit')], 'invisible':[('state','not in',['external_audit','revision', 'revision_response','done'])]}" />
						</group>
						<group col="4">
							<field name="num_inspeech" groups="smart_hr.group_holidays_checker"
								attrs="{'readonly':[('state','!=','revision_response')], 'invisible':[('state','not in',['revision_response','done'])]}" />
							<field name="date_inspeech" groups="smart_hr.group_holidays_checker"
								attrs="{'readonly':[('state','!=','revision_response')], 'invisible':[('state','not in',['revision_response','done'])]}" />
							<field name="inspeech_file" groups="smart_hr.group_holidays_checker"
								attrs="{'readonly':[('state','!=','revision_response')], 'invisible':[('state','not in',['revision_response','done'])]}" />
						</group>
						<field name="need_decision" invisible="1"></field>

						<group col="4">
							<field name="num_decision" groups="smart_hr.group_holidays_checker"
								attrs="{'readonly':[('state','!=','audit')], 'invisible':['|',('state','not in',['audit','done']),('need_decision','=',False)]}" />
							<field name="date_decision" groups="smart_hr.group_holidays_checker"
								attrs="{'readonly':[('state','!=','audit')], 'invisible':['|',('state','not in',['audit','done']),('need_decision','=',False)]}" />
						</group>
						<group>
							<field name="notes" string="ملاحظات"
								attrs="{'readonly':[('state','!=','draft')]}" />
						</group>
						<button name="%(report_hr_holidays_report)d" string="طباعة القرار"
							groups="smart_hr.group_hrm" type="action" states="done" icon="fa-print"
							class="oe_inline oe_stat_button" />

						<button style="padding-right:10px," name=""
							string="طباعة قرار التمديد"
							attrs="{'invisible':['|',('is_extension','=',False),('state','!=','done')]}"
							type="action" icon="fa-print" class="oe_inline oe_stat_button" />
						<div style="margin-top:15px,">
							<field name="message_ids" widget="mail_thread" readonly="1" />
						</div>
					</sheet>

				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_holidays">
			<field name="name">طلبات الاجازات</field>
			<field name="res_model">hr.holidays</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>
		<menuitem id="hr_holidays_menu" name='طلبات الإجازة'
			sequence="5" parent="menu_hr_holiday_root" action="action_hr_holidays" />




		<!-- hr holidays status inherit form -->
		<menuitem id="menu_hr_holidays_status_root" parent="menu_hr_holiday_root"
			name="الإعدادات" sequence="500" groups="smart_hr.group_hrm" />

		<record id="view_form_hr_holidays_status" model="ir.ui.view">
			<field name="name">hr.holidays.status.form</field>
			<field name="model">hr.holidays.status</field>
			<field name="inherit_id" ref="hr_holidays.edit_holiday_status_form" />
			<field name="arch" type="xml">
				<xpath expr="/form" position='replace'>
					<form string="نوع الأجازة">
						<sheet>
							<group col="4">
								<group>
									<field name="name" required="1" />
								</group>
								<group></group>
							</group>
							<field name="entitlements" string="أنواع  الاستحقاقات">
								<tree editable="bottom">
									<field name="entitlment_category" required="1" />
									<field name="holiday_stock_default" />
									<!-- <field name="conditionnal" /> -->
									<field name="periode" />
									<field name="extension_period" />
								</tree>
							</field>

							<field name="percentages">
								<tree editable="bottom" string="نسب الراتب المحتسبة">
									<field name="sequence" required="1" />
									<field name="periode" required="1" />
									<field name="salary_proportion" required="1" />
								</tree>
							</field>
							<group col="4">
								<group>
									<field name="minimum" />
									<field name="maximum" />
									<field name="postponement_period" />
									<field name="color_name" />
									<field name="need_decision" />
									<field name="direct_decision" />
									<field name="promotion_deductible" />
									<field name="extension_number" />
									<field name="for_saudi" />
									<field name="for_other" />
									<field name="salary_spending" />
									<field name="active" />
									<field name="deductible_normal_leave" />
									<field name="deductible_duration_service" />
									<field name="educ_lvl_req" />
									<field name="education_levels"
										attrs="{'invisible':[('educ_lvl_req', '=', False)]}" widget="many2many" />
									<field name="evaluation_condition" />
									<field name="assessments_required"
										attrs="{'invisible':[('evaluation_condition', '=', False)]}"
										widget="many2many" />
									<field name="min_amount" />
									<field name="pension_percent" />
									<field name="demand_number_max" />
									<field name="traveling_ticket" />
									<field name="traveling_ticket_familiar" />
									<field name="transport_allowance" />
									<field name="maximum_days_by_year" />
								</group>

								<group>
								   <separator  colspan="4" string=" المخطط‬‫ الانسيابي‬ "/>
								<group>
								   
									<field name="direct_director_decision" />
									<field name="audit" />
									<field name="employees_director_decision" />
									<field name="external_decision" />
									<field name="need_decision" />
									<field name="direct_decision" />
									<field name="can_be_cancelled" />
								</group>

							</group>
							</group>


						</sheet>
					</form>
				</xpath>
			</field>
		</record>
		<record id="view_tree_hr_holidays_status" model="ir.ui.view">
			<field name="name">hr.holidays.status.tree</field>
			<field name="model">hr.holidays.status</field>
			<field name="inherit_id" ref="hr_holidays.view_holiday_status_tree" />
			<field name="arch" type="xml">
				<xpath expr="/tree" position='replace'>
					<tree string="أنواع الأجازات">
						<field name="name" />
						<field name="minimum" />
						<field name="maximum" />
					</tree>
				</xpath>
			</field>
		</record>

		<record id="action_hr_holidays_status" model="ir.actions.act_window">
			<field name="name">أنواع الأجازات</field>
			<field name="res_model">hr.holidays.status</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_holidays_status" action="action_hr_holidays_status"
			parent="menu_hr_holidays_status_root" name="أنواع الأجازات" />


		<!-- تأجيل إجازة -->
		<record model="ir.ui.view" id="hr_job_delay_holiday_form">
			<field name="name">hr.delay.holiday.form</field>
			<field name="model">hr.delay.holiday</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="تأجيل إجازة">
					<sheet>
						<group col="4">
							<field name="date_from" />
							<field name="date_to" />
							<field name="delay_days" />
						</group>
					</sheet>
					<footer>
						<button name="action_delay_holiday_confirm" string="موافق"
							type="object" />
						أو
						<button string="إلغاء" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

	</data>
</openerp>
