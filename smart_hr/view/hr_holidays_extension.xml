<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>


		<!-- My Hollidays extension -->
		<record id="hr_holidays_extension_mine_form" model="ir.ui.view">
			<field name="name">hr.holidays.extension.form</field>
			<field name="model">hr.holidays.extension</field>
			<field name="sequence" eval="5"/>
			<field name="arch" type="xml">
				<form string="تمديد إجازاتي" create="0" edit="0">
				<field name="is_the_creator" invisible="1" />
					<header>
					
						<button name="button_send" string="إرسال طلب" type="object"
							attrs="{'invisible':['|',('state','!=','draft'),('is_the_creator','=', False)]}" icon="fa-paper-plane"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
							
						<button name="button_done" string="موافق" type="object"
							attrs="{'invisible':['|',('state','!=','audit'),('is_the_creator','=', True)]}" icon="fa-check" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
							
						<button name="%(action_hr_refuse_wizard)d" string="رفض"
							type="action" attrs="{'invisible':['|',('state','!=','audit'),('is_the_creator','=', True)]}" icon="fa-times" class="oe_inline oe_stat_button" />

						<field name="state" widget="statusbar" statusbar_visible="draft,audit,done" />
					</header>
					<sheet>
						<group>
							<field name="name" />
							<field name="employee_id" />
							<field name="holiday_status_id"/>
							<field name="duration"/>
							
						</group>
						<group>
							<field name="note" />
						</group>

					</sheet>
				</form>
			</field>
		</record>
		<record id="hr_holidays_extension_mine_tree" model="ir.ui.view">
			<field name="name">hr.holidays.extension.tree</field>
			<field name="model">hr.holidays.extension</field>
			<field name="arch" type="xml">
				<tree string="تمديد إجازاتي" class="oe_tree_view"
					create="0" edit="0">
					<field name="name" />
					<field name="employee_id" />
					<field name="holiday_status_id"/>
					<field name="state" />
					<field name="duration"/>
				</tree>
			</field>
		</record>
		<record id="action_hr_holidays_extension_mine" model="ir.actions.act_window">
			<field name="name">تمديد إجازاتي</field>
			<field name="res_model">hr.holidays.extension</field>
			<field name="domain">[('employee_id.user_id', '=', uid),('employee_id.employee_state', 'in',['employee', 'done'])]
			</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<record id="action_hr_holidays_extension_mine_tree" model="ir.actions.act_window.view">
			<field name="view_mode">tree</field>
			<field name="view_id" ref="hr_holidays_extension_mine_tree" />
			<field name="act_window_id" ref="action_hr_holidays_extension_mine" />
		</record>

		<record id="action_hr_holidays_extension_mine_form" model="ir.actions.act_window.view">
			<field name="view_mode">form</field>
			<field name="view_id" ref="hr_holidays_extension_mine_form" />
			<field name="act_window_id" ref="action_hr_holidays_extension_mine" />
		</record>
		<menuitem id="menu_hr_my_Hollidays_extension" action="action_hr_holidays_extension_mine"
			parent="menu_hr_holiday_root" sequence="50" name="تمديد إجازاتي" />










		<!-- Employees' Hollidays إلغاء -->

		<record id="hr_holidays_extension_employee_form" model="ir.ui.view">
			<field name="name">hr.holidays.extension.form</field>
			<field name="model">hr.holidays.extension</field>
			<field name="sequence" eval="10"/>
			<field name="arch" type="xml">
				<form string="تمديد إجازة">
				<field name="is_the_creator" invisible="1" />
					<header>
						<button name="button_send" string="إرسال طلب" type="object" 
							attrs="{'invisible':['|',('state','!=','draft'), ('is_the_creator','=', True)]}" icon="fa-paper-plane"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
							
							<button name="button_done" string="موافق" type="object"
							attrs="{'invisible':['|',('state','!=','audit'),('is_the_creator','=', False)]}" icon="fa-check" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
							
						<button name="%(action_hr_refuse_wizard)d" string="رفض"
							type="action" attrs="{'invisible':['|',('state','!=','audit'),('is_the_creator','=', False)]}" icon="fa-times" class="oe_inline oe_stat_button" />
							
						<field name="state" widget="statusbar" statusbar_visible="draft,audit,done" />
					</header>
					<sheet>
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" readonly="1" />
						</h1>
						<group>
							<field name="date" readonly="1" />
							<field name="employee_id" />
							<field name="holiday_status_id" />
							<field name="duration" />
							
						</group>
						<group>
							<field name="note" />
						</group>
						<div>
							<field name="message_ids" widget="mail_thread" readonly="1" />
						</div>
					</sheet>
				</form>
			</field>
		</record>

		<record id="hr_holidays_extension_employee_tree" model="ir.ui.view">
			<field name="name">hr.holidays.extension.tree</field>
			<field name="model">hr.holidays.extension</field>
			<field name="arch" type="xml">
				<tree string="تمديد إجازات" class="oe_tree_view"
					fonts="bold:state in ['draft','done']"
					row_classes="state-refuse:state=='refuse';state-in-progress:state not in ['draft','refuse','done'];">
					<field name="name" />
					<field name="date" />
					<field name="holiday_status_id" />
					<field name="employee_id" />
					<field name="state" />
					<field name="duration" />
					
				</tree>
			</field>
		</record>

		<record id="action_hr_holidays_extension_employees" model="ir.actions.act_window">
			<field name="name">تمديد إجازات الموظفين</field>
			<field name="res_model">hr.holidays.extension</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<record id="action_hr_holidays_extension_employees_tree" model="ir.actions.act_window.view">
			<field name="view_mode">tree</field>
			<field name="view_id" ref="hr_holidays_extension_employee_tree" />
			<field name="act_window_id" ref="action_hr_holidays_extension_employees" />
		</record>

		<record id="action_hr_holidays_extension_employees_form" model="ir.actions.act_window.view">
			<field name="view_mode">form</field>
			<field name="view_id" ref="hr_holidays_extension_employee_form" />
			<field name="act_window_id" ref="action_hr_holidays_extension_employees" />
		</record>
		<menuitem id="menu_hr_holidays_extension_employees"
			action="action_hr_holidays_extension_employees" parent="menu_hr_holiday_root"
			sequence="60" groups="smart_hr.group_dm" name="طلبات التمديد" />


	</data>
</openerp>