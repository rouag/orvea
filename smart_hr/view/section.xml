<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<menuitem id="hr_configuration_sections_root" sequence="40"
			name="الفروع" parent="smart_hr.hr_root_configuration" />

		<!--الفروع -->

		<record id="sectionss_form" model="ir.ui.view">
			<field name="name">section.section.form</field>
			<field name="model">smart.section</field>
			<field name="arch" type="xml">
				<form string="الفروع ">
					<sheet>
						<group>
							<field name="name" />
							<field name="city" />
							<field name="recruiter" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="sections_tree" model="ir.ui.view">
			<field name="name">section.section.tree</field>
			<field name="model">smart.section</field>
			<field name="arch" type="xml">
				<tree string="الفروع">
					<field name="name" />
					<field name="city" />
					<field name="recruiter" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_sections">
			<field name="name">الفروع</field>
			<field name="res_model">smart.section</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- config menu -->
		<menuitem id="hr_configuration_sections" name="الفروع"
			sequence="35" parent="hr_configuration_sections_root" action="action_sections" />





	</data>
</openerp>