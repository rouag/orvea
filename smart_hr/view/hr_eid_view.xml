<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<menuitem id="menu_hr_eid_root" parent="hr_root_configuration"
			name="الاعياد و المناسبات" sequence="10" />

		<!-- Eid -->
		<record id="view_form_hr_eid" model="ir.ui.view">
			<field name="name">hr.eid.form</field>
			<field name="model">hr.eid</field>
			<field name="arch" type="xml">
				<form string="عيد / مناسبة">
					<sheet>
						<group>
							<group>
								<field name="name" required="1" />
							</group>
							<group>
								<field name="date_from" required="1" />
								<field name="date_to" required="1" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_tree_hr_eid" model="ir.ui.view">
			<field name="name">hr.eid.tree</field>
			<field name="model">hr.eid</field>
			<field name="arch" type="xml">
				<tree string="الاعياد و المناسبات" class="oe_tree_view">
					<field name="name" />
					<field name="date_from" />
					<field name="date_to" />
				</tree>
			</field>
		</record>
		<record id="view_search_hr_eid" model="ir.ui.view">
			<field name="name">hr.eid.search</field>
			<field name="model">hr.eid</field>
			<field name="arch" type="xml">
				<search string="الاعياد و المناسبات">
					<field name="name" />
					<field name="date_from" />
					<field name="date_to" />
				</search>
			</field>
		</record>
		<record id="action_hr_eid" model="ir.actions.act_window">
			<field name="name">الاعياد و المناسبات</field>
			<field name="res_model">hr.eid</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<menuitem id="menu_hr_eid" action="action_hr_eid" parent="menu_hr_eid_root" />



	</data>
</openerp>