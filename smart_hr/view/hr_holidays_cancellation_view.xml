<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>


		<!-- My Hollidays Cancellation -->
		<record id="hr_holidays_cancellation_mine_form" model="ir.ui.view">
			<field name="name">hr.holidays.cancellation.form</field>
			<field name="model">hr.holidays.cancellation</field>
			<field name="arch" type="xml">
				<form string="إلغاء أو قطع إجازاتي" create="0" edit="0">
					<header>
						<button name="button_employee_done" string="موافق" type="object"
							states="employee" icon="fa-check" class="oe_inline oe_stat_button"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="%(action_hr_refuse_wizard)d" string="رفض"
							type="action" states="employee" icon="fa-times" class="oe_inline oe_stat_button" />

						<field name="state" widget="statusbar" statusbar_visible="draft,employee,done" />
					</header>
					<sheet>
						<group>
							<field name="name" />
							<field name="employee_id" />
							<field name="holidays"  />
						</group>
						<group>
							<field name="note" />
						</group>
						<button name="%(report_hr_holidays_report)d" string="طباعة القرار" type="action"
							states="done" icon="fa-print" class="oe_inline oe_stat_button" />
					</sheet>
				</form>
			</field>
		</record>
		<record id="hr_holidays_cancellation_mine_tree" model="ir.ui.view">
			<field name="name">hr.holidays.cancellation.tree</field>
			<field name="model">hr.holidays.cancellation</field>
			<field name="arch" type="xml">
				<tree string="إلغاء أو قطع إجازاتي" class="oe_tree_view"
					create="0" edit="0">
					<field name="name" />
					<field name="employee_id" />
					<field name="state" />
					<field name="type" />
				</tree>
			</field>
		</record>
		<record id="action_hr_holidays_cancellation_mine" model="ir.actions.act_window">
			<field name="name">إلغاء أو قطع إجازاتي</field>
			<field name="res_model">hr.holidays.cancellation</field>
			<field name="domain">[('employee_id.user_id', '=', uid),('employee_state', 'in',['employee', 'done'])]
			</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<record id="action_hr_holidays_cancellation_mine_tree" model="ir.actions.act_window.view">
			<field name="view_mode">tree</field>
			<field name="view_id" ref="hr_holidays_cancellation_mine_tree" />
			<field name="act_window_id" ref="action_hr_holidays_cancellation_mine" />
		</record>

		<record id="action_hr_holidays_cancellation_mine_form" model="ir.actions.act_window.view">
			<field name="view_mode">form</field>
			<field name="view_id" ref="hr_holidays_cancellation_mine_form" />
			<field name="act_window_id" ref="action_hr_holidays_cancellation_mine" />
		</record>
		<menuitem id="menu_hr_my_Hollidays_cancellation" action="action_hr_holidays_cancellation_mine"
			parent="menu_hr_holiday_root" sequence="30" name="إلغاء أو قطع إجازاتي" />










		<!-- Employees' Hollidays إلغاء -->

		<record id="hr_holidays_cancellation_employee_form" model="ir.ui.view">
			<field name="name">hr.holidays.cancellation.form</field>
			<field name="model">hr.holidays.cancellation</field>
			<field name="arch" type="xml">
				<form string="إلغاء إجازة">
					<header>
						<button name="button_dm_send" string="إرسال طلب" type="object"
							attrs="{'invisible':['|',('state','!=','draft')]}" icon="fa-paper-plane"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<field name="state" widget="statusbar" statusbar_visible="draft,employee,done" />
					</header>
					<sheet>
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" readonly="1" />
						</h1>
						<group>
							<field name="date" readonly="1" />
							<field name="employee_id" />
							<field name="holidays" widget="many2many" domain="[('state','=', 'done')]"/>
						</group>
						<group>
							<field name="note" />
						</group>
						<button name="%(report_hr_holidays_report)d" string="طباعة القرار" type="action"
							states="done" icon="fa-print" class="oe_inline oe_stat_button" />
						<div>
							<field name="message_ids" widget="mail_thread" readonly="1" />
						</div>
					</sheet>
				</form>
			</field>
		</record>

		<record id="hr_holidays_cancellation_employee_tree" model="ir.ui.view">
			<field name="name">hr.holidays.cancellation.tree</field>
			<field name="model">hr.holidays.cancellation</field>
			<field name="arch" type="xml">
				<tree string="إلغاء إجازات" class="oe_tree_view"
					fonts="bold:state in ['draft','done']"
					row_classes="state-refuse:state=='refuse';state-in-progress:state not in ['draft','refuse','done'];">
					<field name="name" />
					<field name="date" />
					<field name="holidays" />
					<field name="employee_id" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="action_hr_holidays_cancellation_employees" model="ir.actions.act_window">
			<field name="name">إلغاء إجازات الموظفين</field>
			<field name="res_model">hr.holidays.cancellation</field>
			<field name="domain">[('type', '=', 'cancellation')]</field>
			<field name="context">{'operation': 'cancel'}</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<record id="action_hr_holidays_cancellation_employees_tree" model="ir.actions.act_window.view">
			<field name="view_mode">tree</field>
			<field name="view_id" ref="hr_holidays_cancellation_employee_tree" />
			<field name="act_window_id" ref="action_hr_holidays_cancellation_employees" />
		</record>

		<record id="action_hr_holidays_cancellation_employees_form" model="ir.actions.act_window.view">
			<field name="view_mode">form</field>
			<field name="view_id" ref="hr_holidays_cancellation_employee_form" />
			<field name="act_window_id" ref="action_hr_holidays_cancellation_employees" />
		</record>
		<menuitem id="menu_hr_holidays_cancellation_employees"
			action="action_hr_holidays_cancellation_employees" parent="menu_hr_holiday_root"
			sequence="40" groups="smart_hr.group_dm" name="طلبات الإلغاء" />


		<!-- Employees' Hollidays قطع -->
		<record id="hr_holidays_cut_employee_form" model="ir.ui.view">
			<field name="name">hr.holidays.cancellation.form</field>
			<field name="model">hr.holidays.cancellation</field>
			<field name="arch" type="xml">
				<form string="قطع إجازة">
					<header>
						<button name="button_dm_send" string="إرسال طلب" type="object"
							attrs="{'invisible':['|',('state','!=','draft')]}" icon="fa-paper-plane"
							class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<field name="state" widget="statusbar" statusbar_visible="draft,employee,done" />
					</header>
					<sheet>
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" readonly="1" />
						</h1>
						<group>
							<field name="date" readonly="1" />
							<field name="employee_id" readonly="1" />
							<field name="holidays"  />
						</group>
						<group>
							<field name="note" />
						</group>
						<button name="%(report_hr_holidays_report)d" string="طباعة القرار" type="action"
							states="done" icon="fa-print" class="oe_inline oe_stat_button" />
						<div>
							<field name="message_ids" widget="mail_thread" readonly="1" />
						</div>
					</sheet>
				</form>
			</field>
		</record>

		<record id="hr_holidays_cut_employee_tree" model="ir.ui.view">
			<field name="name">hr.holidays.cancellation.tree</field>
			<field name="model">hr.holidays.cancellation</field>
			<field name="arch" type="xml">
				<tree string="قطع إجازات" class="oe_tree_view"
					fonts="bold:state in ['draft','done']"
					row_classes="state-refuse:state=='refuse';state-in-progress:state not in ['draft','refuse','done'];">
					<field name="name" />
					<field name="date" />
					<field name="holidays" />
					<field name="employee_id" />
					<field name="state" />
				</tree>
			</field>
		</record>
		<record id="action_hr_holidays_cut_employees" model="ir.actions.act_window">
			<field name="name">قطع إجازات الموظفين</field>
			<field name="res_model">hr.holidays.cancellation</field>
			<field name="domain">[('type', '=', 'cut')]</field>
			<field name="context">{'operation': 'cut'}</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
			</field>
		</record>
		<record id="action_hr_holidays_cut_employee_tree"
			model="ir.actions.act_window.view">
			<field name="view_mode">tree</field>
			<field name="view_id" ref="hr_holidays_cut_employee_tree" />
			<field name="act_window_id" ref="action_hr_holidays_cut_employees" />
		</record>

		<record id="action_hr_holidays_cut_employee_form"
			model="ir.actions.act_window.view">
			<field name="view_mode">form</field>
			<field name="view_id" ref="hr_holidays_cut_employee_form" />
			<field name="act_window_id" ref="action_hr_holidays_cut_employees" />
		</record>
		<menuitem id="menu_hr_holidays_cut_employees" action="action_hr_holidays_cut_employees"
			parent="menu_hr_holiday_root" sequence="50" groups="smart_hr.group_dm"
			name="طلبات القطع" />



	</data>
</openerp>