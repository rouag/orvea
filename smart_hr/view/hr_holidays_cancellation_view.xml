<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
    	
    	
    	<menuitem id="menu_hr_holidays_cancellation_root" parent="menu_hr_leave_root"
			name="إلغاءات الإجازات" sequence="500" />

        <!--
            Leave Cancellation
        -->
        <record id="view_form_hr_holidays_cancellation" model="ir.ui.view">
            <field name="name">hr.holidays.cancellation.form</field>
            <field name="model">hr.holidays.cancellation</field>
            <field name="arch" type="xml">
                <form string="إلغاء إجازة" create="0">
                    <field name="is_current_user" invisible="1"/>
                    <header>
                        <button name="button_audit" string="إرسال طلب" type="object" attrs="{'invisible':['|',('state','!=','draft'),('is_current_user','=',False)]}" icon="fa-paper-plane" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟"/>
                        <button name="button_done" string="موافق" type="object" states="audit" groups="smart_hr.group_hr" icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟"/>
                        <button name="%(action_hr_refuse_wizard)d" string="رفض" type="action" states="audit" groups="smart_hr.group_hrm" icon="fa-times" class="oe_inline oe_stat_button"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,audit,done"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="leave_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="employee_id" readonly="1"/>
                        </group>
                        <div>
                            <field name="message_ids" widget="mail_thread" readonly="1"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_hr_holidays_cancellation" model="ir.ui.view">
            <field name="name">hr.holidays.cancellation.tree</field>
            <field name="model">hr.holidays.cancellation</field>
            <field name="arch" type="xml">
                <tree string="إلغاء إجازات" class="oe_tree_view" create="0" fonts="bold:state in ['draft','done']" row_classes="state-refuse:state=='refuse';state-in-progress:state not in ['draft','refuse','done'];">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="leave_id"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Leave Cancellation Search-->
        <record id="view_search_hr_holidays_cancellation" model="ir.ui.view">
            <field name="name">hr.holidays.cancellation.search</field>
            <field name="model">hr.holidays.cancellation</field>
            <field name="arch" type="xml">
                <search string="إلغاء إجازات">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="leave_id"/>
                    <field name="state"/>
                    <separator/>
                    <filter string="إلغاء إجازاتي" name="my_leave_cancellation" domain="[('leave_id.employee_id.user_id', '=', uid)]" help="إلغاء إجازاتي"/>
                    <filter string="إلغاء إجازات الموظفين" name="employees_leave_cancellation" domain="[('leave_id.employee_id.user_id', '!=', uid)]" help="إلغاء إجازات الموظفين"/>
                    <separator/>
                    <filter string="طلب" name="state_draft" domain="[('state','=','draft')]"/>
                    <filter string="التدقيق" name="state_audit" domain="[('state','=','audit')]"/>
                    <filter string="اعتمدت" name="state_done" domain="[('state','=','done')]"/>
                    <filter string="رفض" name="state_refuse" domain="[('state','=','refuse')]"/>
                </search>
            </field>
        </record>

        <!-- My Leave Cancellation -->
        <record id="action_hr_holidays_cancellation_mine" model="ir.actions.act_window">
            <field name="name">إلغاء إجازاتي</field>
            <field name="res_model">hr.holidays.cancellation</field>
            <field name="search_view_id" ref="view_search_hr_holidays_cancellation"/>
            <field name="domain">[('leave_id.employee_id.user_id', '=', uid)]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              	<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
            </field>
        </record>
        <menuitem id="menu_hr_my_leave_cancellation"
                  action="action_hr_holidays_cancellation_mine"
                  parent="menu_hr_holidays_cancellation_root"
                  sequence="1"
                  name="إلغاء إجازاتي"/>

        <!-- Employees' Leave Cancellation -->
        <record id="action_hr_holidays_cancellation_employees" model="ir.actions.act_window">
            <field name="name">إلغاء إجازات الموظفين</field>
            <field name="res_model">hr.holidays.cancellation</field>
            <field name="search_view_id" ref="view_search_hr_holidays_cancellation"/>
            <field name="domain">[('leave_id.employee_id.user_id', '!=', uid),('state','!=','draft')]</field>
            <field name="context">{'search_default_state_dm':1}</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              	<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
            </field>
        </record>
        <menuitem id="menu_hr_holidays_cancellation_employees"
                  action="action_hr_holidays_cancellation_employees"
                  parent="menu_hr_holidays_cancellation_root"
                  sequence="2"
                  groups="smart_hr.group_dm,smart_hr.group_hr"
                  name="إلغاء إجازات الموظفين"/>

        <!-- HR Audit -->
        <record id="action_hr_holidays_cancellation_audit" model="ir.actions.act_window">
            <field name="name">في إنتظار الإعتماد</field>
            <field name="res_model">hr.holidays.cancellation</field>
            <field name="search_view_id" ref="view_search_hr_holidays_cancellation"/>
            <field name="domain">[('state','=','audit')]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              	<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
            </field>
        </record>
        <menuitem id="menu_hr_holidays_cancellation_audit"
                  action="action_hr_holidays_cancellation_audit"
                  parent="menu_hr_holidays_cancellation_root"
                  sequence="3"
                  groups="smart_hr.group_hr"
                  name="فى انتظار الإعتماد"/>

        <!-- Leave Cancellation Archive -->
        <record id="action_hr_holidays_cancellation_archive" model="ir.actions.act_window">
            <field name="name">أرشيف إلغاء الإجازات</field>
            <field name="res_model">hr.holidays.cancellation</field>
            <field name="search_view_id" ref="view_search_hr_holidays_cancellation"/>
            <field name="domain">[('state','!=','draft')]</field>
            <field name="context">{'search_default_state_done':1}</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              	<p class="oe_view_nocontent_create">أنقر هنا للإضافة</p>
            </field>
        </record>
        <menuitem id="menu_hr_holidays_cancellation_archive"
                  action="action_hr_holidays_cancellation_archive"
                  parent="menu_hr_holidays_cancellation_root"
                  sequence="4"
                  groups="smart_hr.group_hr"
                  name="أرشيف إلغاء الإجازات"/>

    </data>
</openerp>