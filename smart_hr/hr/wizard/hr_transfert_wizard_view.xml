			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="employee_id" />
								<field name="job_id" />
								<field name="specific_id" />
								<field name="type_id" />
								<field name="department_id" />
								<field name="degree_id" />
								<field name="dep_city" />
								<field name="employee_desire_ids" />
