<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- إعداد الدفع -->
		<record model="ir.ui.view" id="hr_contract_payement_tree">
			<field name="name">hr.contract.payement.tree</field>
			<field name="model">hr.contract.payement</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="دفع المجدول">
					<field name="name" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_contract_payement_form">
			<field name="name">hr.contract.payement.form</field>
			<field name="model">hr.contract.payement</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string=" دفع المجدول">
					<sheet>
						<group>
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_contract_payement">
			<field name="name"> دفع المجدول</field>
			<field name="res_model">hr.contract.payement</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!--<menuitem id="hr_contract_payement_menu" name="جدولة دفع الرواتب "
			sequence="42" parent="hr_payroll_setting" />

		<menuitem id="hr_contract_payement_menu_sou" name="  الدفع المجدول"
			sequence="25" parent="hr_contract_payement_menu" action="action_hr_contract_payement" />  -->

		<!-- HR Contract -->
		
		<record id="view_hr_contract_form_inherit" model="ir.ui.view">
			<field name="name">hr.contract.form.inherit</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
			<field name="arch" type="xml">

				<field name="employee_id" position="after">
					<field name="country_id" />
					<field name="identification_id" />
					<field name="identification_date" />
					<field name="identification_place" />
					<field name="passport_id" />
				</field>
				<label for="name" position="replace">
					<label string="مسمى العقد" for="name" />
				</label>


				<field name="department_id" position="replace">
					<field name="department_id" />
				</field>
				<field name="type_id" position="replace">
					<field name="type_id" />
					<field name="grade_id" />
					<field name="degree_id" domain="[('grade_id','=',grade_id)]" />
					<field name="renewable" />
				</field>
				<xpath
					expr="/form/sheet/notebook/page/group/group[@name='salary_and_advantages']"
					position="after">
					<group name="payement" string=" الرواتب و البدلات  ">
						<field name="struct_id" invisible="1" />
						<field name="basic_salary" />
						<field name="transport_allow" />
						<field name="net_salary" />
						<field name="assurance" />
						<field name="ticket_travel" />
						<field name="ticket_famely" />
					

					</group>


					<group name="periode" string=" خصائص العقد  ">
						<field name="date_to" />
						<field name="date_endd" />
						<field name="date_contract_to" />
						<field name="date_contract_end" />
						<field name="calendar_id" />
						<field name="payement_emploi" />

					</group>
				</xpath>
				<xpath expr="/form/sheet/notebook/page/group/group/field[@name='wage']"
					position="attributes">
					<attribute name="invisible">True</attribute>
				</xpath>

				<xpath
					expr="/form/sheet/notebook/page/group/group[@name='salary_and_advantages']"
					position="attributes">
					<attribute name="required">False</attribute>
					<attribute name="invisible">True</attribute>
				</xpath>

				<xpath
					expr="/form/sheet/notebook/page/group/group[@name='duration_group']"
					position="attributes">
					<attribute name="invisible">True</attribute>

				</xpath>
				<xpath expr="//page[@name='information']" position="after">
					<page string="المسوول على العقد و مراجع البيانات">
						<group>
							<group string="المسوول على العقد">
								<field name="employee_id1" string="المسوول على العقد" />
								<field name="department_id1" string="القسم" />
								<field name="job_id1" string="الوظيفة" />
							</group>
							<group string="مراجع البيانات">
								<field name="employee_id2" string="مراجع البيانات" />
								<field name="job_id2" string="الوظيفة" />
							</group>
						</group>
					</page>
					<page string="بنود العقد">
						<group>
							<group string="بنود العقد">
								<field name="contract_item_ids" nolabel="1">
									<tree editable="bottom">
										<field name="name" />
										<field name="text" />
									</tree>
								</field>

							</group>
						</group>
					</page>
				</xpath>

			</field>
		</record>
	</data>
</openerp>
