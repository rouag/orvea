<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- طلب نقل موظف -->
		<record id="view_hr_employee_transfert_form" model="ir.ui.view">
			<field name="name">hr.employee.transfert.form</field>
			<field name="model">hr.employee.transfert</field>
			<field name="arch" type="xml">
				<form string="طلب نقل موظف">
					<header>
						<button name="action_waiting" string="إرسال " type="object"
							groups="smart_hr.group_employee" states="new"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<!--صاحب صلاحية -->
						<button name="action_pm" string="موافق" type="object"
							states="waiting" groups="smart_hr.group_tranfert_employee_owner"
							icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="action_refused" string="رفض" type="object"
							states="waiting" groups="smart_hr.group_tranfert_employee_owner"
							icon="fa-times" class="oe_inline oe_stat_button" />
						
						<button name="action_done" string="إعتماد" type="object"
							groups="smart_hr.group_hr_personnel_officer_jobs" states="pm"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="action_notif" string="تنبيه صاحب الطلب" type="object"
							groups="smart_hr.group_hr_personnel_officer_jobs"
							attrs="{'invisible':['|', ('state', '!=', 'pm'), ('new_job_id', '=', False)]}"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<!--شؤون الموظفين -->
						
						<button name="action_pm" string="إنتقاء وظيفة" type="object"
							groups="smart_hr.group_hr_personnel_officer_jobs" states="pending" />


						<field name="state" widget="statusbar"
							statusbar_visible="new,waiting,pm,pending,done,refused" />
					</header>
					<sheet>
						<field name="same_group" invisible="1" />
						<group>
							<field name="create_date" />
						</group>
						<group>
							<group>
								<field name="employee_id" />
								<field name="justification_text" />
								<field name="transfert_type" />
							</group>
							<group string="قرار الجهة المختصة"
								attrs="{'invisible':['|', ('state', 'not in', ['pm','done']), ('same_group', '=', False)]}">
								<field name="decision_number"
									attrs="{'invisible':['|', ('state', 'not in', ['pm','done']), ('same_group', '=', False)], 'required':[('same_group', '=', True)]}" />
								<field name="decision_date"
									attrs="{'invisible':['|', ('state', 'not in', ['pm','done']), ('same_group', '=', False)], 'required':[('same_group', '=', True)]}" />
								<field name="decision_file"
									attrs="{'invisible':['|', ('state', 'not in', ['pm','done']), ('same_group', '=', False)], 'required':[('same_group', '=', True)]}" />
							</group>
							<group string="موافقة الخدمة المدنية"
								attrs="{'invisible':['|', '|', ('state', 'not in', ['pm','done']), ('same_group', '=', True), ('new_job_id', '=', False)]}">
								<field name="speech_number"
									attrs="{'invisible':['|', ('state', 'not in', ['pm','done']), ('same_group', '=', True)], 'required':[('same_group', '=', False)]}" />
								<field name="speech_date"
									attrs="{'invisible':['|', ('state', 'not in', ['pm','done']), ('same_group', '=', True)], 'required':[('same_group', '=', False)]}" />
								<field name="speech_file"
									attrs="{'invisible':['|', ('state', 'not in', ['pm','done']), ('same_group', '=', True)], 'required':[('same_group', '=', False)]}" />
							</group>
						</group>
						<notebook>
							<page name="job" string="بيانات الوظيفة المنقول عليها">
								<br></br>
								<group>
									<group>
										<field name="job_id" />
										<field name="specific_id" />
										<field name="type_id" />
									</group>
									<group>
									</group>
								</group>
							</page>
							<page name="new job" string="بيانات الوظيفة المنقول إليها"
								attrs="{'invisible':[('state', 'in', ['new', 'waiting'])]}">
								<br></br>
								<group>
									<group>
										<field name="new_job_id" options="{'no_create_edit': True}"
											attrs="{'readonly':[('state', '!=', 'pm')],}" />
										<field name="new_specific_id" />
										<field name="new_type_id" />
									</group>
									<group>
										<field name="date_direct_action" />
										<field name="degree_id" options="{'no_create_edit': True}"
											attrs="{'readonly':[('state', '!=', 'pm')],}" />
									</group>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_hr_employee_transfert_tree" model="ir.ui.view">
			<field name="name">hr.employee.transfert.tree</field>
			<field name="model">hr.employee.transfert</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string=" طلب نقل موظف">
					<field name="employee_id" />
					<field name="transfert_type" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="action_hr_employee_transfert" model="ir.actions.act_window">
			<field name="name">طلب نقل موظف</field>
			<field name="res_model">hr.employee.transfert</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem action="action_hr_employee_transfert" id="hr_menu_employee_transfert"
			parent="hr_root_employees" name="طلبات النقل" sequence="2" />


	</data>
</openerp>
