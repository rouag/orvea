<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- طلب نقل موظف -->
		<record id="view_hr_employee_transfert_form" model="ir.ui.view">
			<field name="name">hr.employee.transfert.form</field>
			<field name="model">hr.employee.transfert</field>
			<field name="arch" type="xml">
				<form string="طلب نقل موظف">
					<header>
						<button name="action_waiting" string="إرسال " type="object"
							groups="smart_hr.group_employee" states="new"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<!--صاحب صلاحية -->
						<button name="action_pm" string="موافق" type="object"
							states="waiting" groups="smart_hr.group_tranfert_employee_owner"
							icon="fa-check" class="oe_inline oe_stat_button" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="action_refused" string="رفض" type="object"
							states="waiting" groups="smart_hr.group_tranfert_employee_owner"
							icon="fa-times" class="oe_inline oe_stat_button" />
						<!-- رئيس الهيئة -->
						<button name="action_choose" string="إختيار هذا الطلب"
							type="object" groups="smart_hr.group_decision_select_candidate"
							attrs="{'invisible':['|',('state', '!=', 'commission_president')]}"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<button name="action_done" string="إعتماد" type="object"
							groups="smart_hr.group_hr_personnel_officer_jobs"
							attrs="{'invisible':['|','|', ('state', '!=', 'pm'), ('new_job_id', '=', False), ('conflicted_emp_trans_id', '!=', False)]}"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="action_com_president" string="إرسال" type="object"
							groups="smart_hr.group_hr_personnel_officer_jobs"
							attrs="{'invisible':['|','|', ('state', '!=', 'pm'), ('new_job_id', '=', False), ('conflicted_emp_trans_id', '=', False)]}"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="action_notif" string="تنبيه صاحب الطلب" type="object"
							groups="smart_hr.group_hr_personnel_officer_jobs"
							attrs="{'invisible':['|', ('state', '!=', 'pm'), ('new_job_id', '!=', False)]}"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<!--شؤون الموظفين -->


						<field name="state" widget="statusbar"
							statusbar_visible="new,waiting,pm,commission_president,done,refused,cancelled" />
					</header>
					<sheet>
						<field name="same_group" invisible="1" />
						<field name="comm_president_accept" invisible="1" />
						<group>
							<field name="create_date" />
						</group>
						<group>
							<group>
								<field name="employee_id" />
								<field name="conflicted_emp_trans_id"
									attrs="{'invisible':[('state', '!=', 'commission_president')],'readonly': True}" />
								<field name="justification_text" />
								<field name="transfert_type" />
								<field name="governmental_entity"
									attrs="{'invisible':[('transfert_type', '!=', 'external_transfert_out')]}"
									options="{'no_create_edit': True}" />
								<field name="note"
									attrs="{'invisible':[('state', 'in', ['waiting','new'])]}" />
								<field name="refusing_date" attrs="{'invisible':[('state', '!=', 'refused')]}" />
							</group>
							<group string="قرار الجهة المختصة"
								attrs="{'invisible':['|','|', ('state', 'not in', ['pm','commission_president','done']), ('same_group', '=', False),('decision_number','=',False),('state','!=','pm')]}">
								<field name="decision_number"
									attrs="{'required':[('same_group', '=', True),('conflicted_emp_trans_id', '=', False),('new_job_id', '!=', False)],'readonly':[('state', '!=', 'pm')]}" />
								<field name="decision_date"
									attrs="{'required':[('same_group', '=', True),('conflicted_emp_trans_id', '=', False),('new_job_id', '!=', False)],'readonly':[('state', '!=', 'pm')]}" />
								<field name="decision_file"
									attrs="{'required':[('same_group', '=', True),('conflicted_emp_trans_id', '=', False),('new_job_id', '!=', False)],'readonly':[('state', '!=', 'pm'),]}" />
							</group>
							<group string="موافقة الخدمة المدنية"
								attrs="{'invisible':['|', '|', ('state', 'not in', ['pm','commission_president','done']), ('same_group', '=', True), ('new_job_id', '=', False),('speech_number','=',False)]}">
								<field name="speech_number"
									attrs="{'required':[('same_group', '=', False),('conflicted_emp_trans_id', '=', False),('state', '=', 'pm'),('new_job_id', '!=', False)],'readonly':[('state', '!=', 'pm')]}" />
								<field name="speech_date"
									attrs="{'required':[('same_group', '=', False),('conflicted_emp_trans_id', '=', False),('state', '=', 'pm'),('new_job_id', '!=', False) ],'readonly':[('state', '!=', 'pm')]}" />
								<field name="speech_file"
									attrs="{'required':[('same_group', '=', False),('conflicted_emp_trans_id', '=', False),('state', '=', 'pm'),('new_job_id', '!=', False)],'readonly':[('state', '!=', 'pm')]}" />
							</group>
						</group>
						<notebook>
							<page name="job" string="بيانات الوظيفة المنقول عليها">
								<br></br>
								<group>
									<group>
										<field name="job_id" />
										<field name="specific_id" />
										<field name="type_id" />
									</group>
									<group>
									</group>
								</group>
							</page>
							<page name="new job" string="بيانات الوظيفة المنقول إليها"
								attrs="{'invisible':[('state', 'in', ['new', 'waiting'])]}">
								<br></br>
								<group>
									<group>
										<field name="new_job_id" options="{'no_create_edit': True}"
											attrs="{'readonly':[('state', '!=', 'pm')],}" />
										<field name="new_specific_id" />
										<field name="new_type_id" />
									</group>
									<group>
										<field name="date_direct_action" attrs="{'readonly':[('state', '!=', 'pm')]}" />
										<field name="degree_id" options="{'no_create_edit': True}"
											attrs="{'readonly':[('state', '!=', 'pm')],'required':[('state', '=', 'pm'),('conflicted_emp_trans_id', '=', False),('new_job_id', '!=', False)]}" />
									</group>
								</group>
							</page>
							<page name="desires" string="ترتيب الرغبات">
								<br></br>
								<field name="desire_ids">
									<tree>
										<field name="sequence" widget="handle" />
										<field name="name" readonly="1" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_hr_employee_transfert_tree" model="ir.ui.view">
			<field name="name">hr.employee.transfert.tree</field>
			<field name="model">hr.employee.transfert</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string=" طلب نقل موظف">
					<field name="employee_id" />
					<field name="transfert_type" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="action_hr_employee_transfert" model="ir.actions.act_window">
			<field name="name">طلب نقل موظف</field>
			<field name="res_model">hr.employee.transfert</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem action="action_hr_employee_transfert" id="hr_menu_employee_transfert"
			parent="hr_root_employees" name="طلبات النقل" sequence="15" />

		<!-- فترات النقل -->
		<record id="view_hr_employee_transfert_periode_form" model="ir.ui.view">
			<field name="name">hr.employee.transfert.periode.form</field>
			<field name="model">hr.employee.transfert.periode</field>
			<field name="arch" type="xml">
				<form string="فترات النقل">
					<sheet>
						<group col="4">
							<field name="date_from" />
							<field name="date_to" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_hr_employee_transfert_periode_tree" model="ir.ui.view">
			<field name="name">hr.employee.transfert.periode.tree</field>
			<field name="model">hr.employee.transfert.periode</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="فترات النقل">
					<field name="date_from" />
					<field name="date_to" />
				</tree>
			</field>
		</record>

		<record id="action_hr_employee_transfert_periode" model="ir.actions.act_window">
			<field name="name">فترات النقل</field>
			<field name="res_model">hr.employee.transfert.periode</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem action="action_hr_employee_transfert_periode" id="hr_menu_employee_transfert_periode"
			parent="hr_root_organisation_configuration" name="فترات النقل"
			sequence="17" />

		<!-- ترتيب طلبات النقل -->

		<record id="view_hr_transfert_sorting" model="ir.ui.view">
			<field name="name">hr.transfert.sorting.form</field>
			<field name="model">hr.transfert.sorting</field>
			<field name="arch" type="xml">
				<form string="ترتيب طلبات النقل" create='0' delete='0'
					duplicate='0'>

					<sheet>
						<group string="ترتيب طلبات النقل">
							<field name="name" invisible="1" />
						</group>
						<field name="hr_transfert_ids" string=" طلبات النقل">
							<tree editable="bottom" create="false">

								<field name="sequence" widget="handle" />
								<field name="sequence" readonly="1" />
								<field name="employee_id" readonly="1" />
								<field name="job_id" readonly="1" />
								<field name="occupied_date" readonly="1" />
								<field name="create_date" readonly="1" />
								<field name="last_evaluation_result" readonly="1" />
								<field name="new_job_id" />
								<field name="conflicted_emp_trans_id" />
								<button name="action_notif" string="تنبيه صاحب الطلب بعدم توفر وظيفة مناسبة"
									type="object" groups="smart_hr.group_hr_personnel_officer_jobs"
									attrs="{'invisible':[('new_job_id', '!=', False)]}" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
								<button name="action_pick_job" attrs="{'invisible':[('new_job_id', '=', False)]}"
									groups="smart_hr.group_hr_personnel_officer_jobs"
									context="{'rec_id': id, 'new_job_id': new_job_id, 'conflicted_emp_trans_id': conflicted_emp_trans_id}"
									string="إنتقاء الوظيفة" type="object" />
								<field name="state" invisible="1" />
							</tree>
						</field>
					</sheet>
				</form>
			</field>
		</record>
		<record id="ir_actions_button_hr_transfert_sorting" model="ir.actions.server">
			<field name="sequence" eval="5" />
			<field name="state">code</field>
			<field name="type">ir.actions.server</field>
			<field name="model_id" ref="model_hr_transfert_sorting" />
			<field name="code">action=pool.get('hr.transfert.sorting').button_transfert_sorting(cr,uid,None,)
			</field>
			<field name="condition">True</field>
			<field name="name">ترتيب طلبات النقل</field>
		</record>

		<menuitem name="ترتيب طلبات النقل" id="hr_transfert_sorting_menu"
			parent="hr_root_employees" sequence="16"
			action="ir_actions_button_hr_transfert_sorting" />

	</data>
</openerp>
