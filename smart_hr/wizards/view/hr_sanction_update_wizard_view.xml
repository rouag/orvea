<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_wizard_sanction_update" model="ir.ui.view">
			<field name="name">wizard.sanction.update.form</field>
			<field name="model">wizard.sanction.update</field>
			<field name="arch" type="xml">
				<form>

					<group>
						<group>
							<field name="name" />

							<field name="order_date" />
							<field name="order_picture" filename="order_picture_name" />
							<field name="order_picture_name" invisible="1" />
						</group>
						<group>

							<field name="type_sanction" />
								<field name="nb_days_new" />
							<field name="date_sanction_start" />
							<field name="date_sanction_end" />
						</group>
					</group>

					
					<footer>
						<button icon="fa-cogs" string="تأكيد" name="action_exclusion"
							type="object" class="oe_highlight" />
						أو
						<button string="إلغاء" class="oe_link" special="cancel" />
					</footer>


				</form>
			</field>
		</record>

		<record id="action_wizard_sanction_update" model="ir.actions.act_window">
			<field name="name">تعديل </field>
			<field name="res_model">wizard.sanction.update</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_wizard_sanction_update" />
			<field name="target">new</field>
		</record>

	</data>
</openerp>
