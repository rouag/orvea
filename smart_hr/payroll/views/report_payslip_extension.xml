<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_payslip_extension">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="smart_base.landscape_layout">

						<!-- <div class="header"> <div class="col-xs-4"> <h3> <strong> المملكة 
							العربية السعودية </strong> </h3> <h2> <strong> هيئة التحقيق و الإدعاء العام 
							</strong> </h2> </div> <div class="col-xs-6 text-center"> <img t-if="company.logo" 
							t-att-src="'data:image/png;base64,%s' % company.logo" width="100%" style="max-height:85px 
							!important;" /> </div> <div class="col-xs-2"> <span t-esc="get_hijri_date(context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d 
							%H:%M'), '-')" /> </div> </div> -->

						<div class="page">
							<t t-set="nbpage" t-value="0" />

							<div class="col-xs-12 left">

								<br></br>
								<strong>تاريخ الطباعة
									:
								</strong>
								<span
									t-esc="get_hijri_date(context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d 
							%H:%M'), '-')" />
								<br></br>
								<strong>رقم الصفحة :</strong>
								<span t-esc="nbpage+1" />
								<br></br>
								<br></br>
								<br></br>
							</div>

							<div class="col-xs-12 text-center">
								<br></br>
								<strong>ملحق الرواتب
									:
								</strong>
								<span t-field="o.month" />
								<br></br>
								<br></br>
							</div>
							<br></br>
							<br></br>
							<div class="col-xs-12 text-center">

								<table class="table  table-bordered">
									<thead>
										<tr>
											<td class="text-center">م</td>
											<td class="text-center">رقم الموظف </td>
											<td class="text-center">الإسم</td>
											<td class="text-center">مسمى الوظيفة </td>
											<td class="text-center">الرقم الوظيفي</td>
											<td class="text-center">الدرجة </td>
											<td class="text-center"> الراتب الاساسي</td>
											<td colspan="2" class="text-center">إجمالي البدلات</td>
											<td colspan="2" class="text-center">إجمالي الحسميات </td>
											<td class="text-center"> الصافي</td>
											<td class="text-center">توقيع المستلم</td>
										</tr>
									</thead>
									<tbody>
										<t t-set="i" t-value="0" />
										<t t-foreach="o.slip_ids" t-as="line">
											<tr>
												<td>
													<span t-esc="i+1" />
												</td>
												<td>
													<span t-field="line.employee_id.number" />
												</td>
												<td>
													<span t-field="line.employee_id.name" />
												</td>
												<td>
													<span t-field="line.employee_id.job_id" />
												</td>
												<td>
													<span t-field="line.employee_id.job_id.number" />
												</td>
												<td>
													<span t-field="line.employee_id.degree_id" />
												</td>
												<td>
													<span t-field="line.employee_id.salary_grid_id.basic_salary" />
												</td>
												<td colspan="2" class="text-center">
													<span t-esc="get_sum_allowances(line.line_ids)" />
												</td>
												<td colspan="2" class="text-center">
													<span t-esc="get_sum_allowances(line.line_ids)" />
												</td>
												<td>
												
													<span t-esc="get_salary_net(line.line_ids)" />
												</td>
												<td></td>

											</tr>
											<t t-set="i" t-value="i+1" />
										</t>
									</tbody>
								</table>
							</div>

							<div class="col-xs-4 text-center">
								<br></br>
								<strong>الموظف المختص</strong>
								<br></br>
							</div>
							<div class="col-xs-4 text-center">
								<br></br>
								<strong>المراجع</strong>
								<br></br>
							</div>
							<div class="col-xs-4 text-center">
								<br></br>
								<strong>المدير</strong>
								<br></br>
							</div>
							<t t-set="nbpage" t-value="nbpage+1" />
							
						</div>
					</t>
				</t>
			</t>
		</template>
	</data>
</openerp>
							