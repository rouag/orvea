<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_hr_error_employee">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="smart_base.landscape_layout">
						<div class="page">
							<div class="col-xs-12 text-center">
								<br></br>
								<br></br>
								<br></br>
								<div class="col-xs-12 text-center">
									<h3>
										<strong>تقرير الموظفين المسثنين من المسير الجماعي :</strong>

										<span t-field="o.month" />
									</h3>
								</div>
									
								
								<div class="col-xs-12 text-center">
									<table class="table table-condensed">
										<thead>
											<tr>
												<th class="text-center">رقم الموظف </th>
												<th class="text-center">الإسم</th>
												<th class="text-center">مسمى الوظيفة </th>
												<th class="text-center">رقم الوظيفة</th>
												<th class="text-center">السبب</th>
											</tr>
										</thead>
										<t t-set="employee_ids" t-value="get_all_employees(o.month,o.department_level1_id,o.department_level2_id,o.department_level3_id,o.salary_grid_type_id)" />
										<t t-foreach="employee_ids" t-as="line">
											<tr>
												<td>
													<span t-field="line.employee_id.number" />
												</td>
												<td>
													<span t-field="line.employee_id.display_name" />
												</td>
												<td>
													<span t-field="line.employee_id.job_id" />
												</td>
												<td>
													<span t-field="line.employee_id.job_id.number" />
												</td>
												<td>
												</td>
											</tr>
										</t>
									</table>
								</div>
								<div class="col-xs-12 text-center">
								<br></br> <strong>الموظفين الذين لم يدخلوا الاعداد</strong>
									<table class="table table-condensed">
										<thead>
											<tr>
												<th class="text-center">رقم الموظف </th>
												<th class="text-center">الإسم</th>
												<th class="text-center">مسمى الوظيفة </th>
												<th class="text-center">رقم الوظيفة</th>
												<th class="text-center">السبب</th>
											</tr>
										</thead>
										<t t-set="employee_ids" t-value="get_error_employees(o.month,o.department_level1_id,o.department_level2_id,o.department_level3_id,o.salary_grid_type_id)"  />
										<t t-foreach="employee_ids" t-as="line">
											<tr>
												<td>
													<span t-field="line.number" />
												</td>
												<td>
													<span t-field="line.display_name" />
												</td>
												<td>
													<span t-field="line.job_id" />
												</td>
												<td>
													<span t-field="line.job_id.number" />
												</td>
												<td>
												</td>
											</tr>
										</t>
									</table>
								</div>
									<div class="col-xs-12 text-center">
						<br></br> <strong>موظفين:  طي القيد</strong>
									<table class="table table-condensed">
										<thead>
											<tr>
												<th class="text-center">رقم الموظف </th>
												<th class="text-center">الإسم</th>
												<th class="text-center">مسمى الوظيفة </th>
												<th class="text-center">رقم الوظيفة</th>
												<th class="text-center">السبب</th>
											</tr>
										</thead>
										<t t-set="employee_ids" t-value="get_termination_employees(o.month,o.department_level1_id,o.department_level2_id,o.department_level3_id,o.salary_grid_type_id)" />
										<t t-foreach="employee_ids" t-as="line">
											<tr>
												<td>
													<span t-field="line.number" />
												</td>
												<td>
													<span t-field="line.display_name" />
												</td>
												<td>
													<span t-field="line.job_id" />
												</td>
												<td>
													<span t-field="line.job_id.number" />
												</td>
												<td>
												</td>
											</tr>
										</t>
									</table>
									</div>
								</div>
							</div>
					</t>

				</t>
			</t>
		</template>
	</data>
</openerp>
							