		<!-- التعويضات -->
		<record id="hr_indemnity_01" model="hr.indemnity">
			<field name="name">تعويض‬ ‫وفاة‬</field>
			<field name="code">01</field>
		</record>
		<record id="hr_indemnity_02" model="hr.indemnity">
			<field name="name">تعويض‬ ‫إصابة‬</field>
			<field name="code">02</field>
		</record>

		<!-- فئات قواعد الرواتب -->

		<record id="BASIC" model="hr.salary.rule.category">
			<field name="name">الراتب الأساسي‬</field>
			<field name="code">BASIC</field>
		</record>
		<record id="ALW" model="hr.salary.rule.category">
			<field name="name">البدلات‬</field>
			<field name="code">ALW</field>
		</record>
		<record id="REW" model="hr.salary.rule.category">
			<field name="name">المكافآت‬</field>
			<field name="code">REW</field>
		</record>
		<record id="INDE" model="hr.salary.rule.category">
			<field name="name">التعويضات</field>
			<field name="code">INDE</field>
		</record>
		<record id="TOT" model="hr.salary.rule.category">
			<field name="name">الإجمالي</field>
			<field name="code">TOT</field>
		</record>
		<record id="DED" model="hr.salary.rule.category">
			<field name="name">الحسميات</field>
			<field name="code">DED</field>
		</record>
		<record id="INS" model="hr.salary.rule.category">
			<field name="name">التأمين</field>
			<field name="code">INS</field>
		</record>
		<record id="NET" model="hr.salary.rule.category">
			<field name="name">الصافي المستحق</field>
			<field name="code">NET</field>
		</record>
		
		<!-- قواعد إحتساب الرواتب -->
		
		<record id="hr_rule_basic" model="hr.salary.rule">
			<field name="name">الراتب الأساسي</field>
			<field name="sequence" eval="1" />
			<field name="code">BASIC</field>
			<field name="category_id" ref="smart_hr.BASIC" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = employee.wage</field>
		</record>

		<record id="hr_rule_allowance_transport" model="hr.salary.rule">
			<field name="name">بدل النقل</field>
			<field name="sequence" eval="2" />
			<field name="code">ALW-TRANS</field>
			<field name="category_id" ref="smart_hr.ALW" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = employee.allowance_transport</field>
		</record>

		<record id="hr_rule_allowance_house" model="hr.salary.rule">
			<field name="name">بدل سكن</field>
			<field name="sequence" eval="3" />
			<field name="code">ALW-HOS</field>
			<field name="category_id" ref="smart_hr.ALW" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = employee.allowance_house</field>
		</record>

		<record id="hr_rule_reward" model="hr.salary.rule">
			<field name="name">المكافآت‬</field>
			<field name="sequence" eval="4" />
			<field name="code">REW</field>
			<field name="category_id" ref="smart_hr.REW" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = employee.get_reward_amount()</field>
		</record>

		<record id="hr_rule_indemnity" model="hr.salary.rule">
			<field name="name">التعويضات</field>
			<field name="sequence" eval="5" />
			<field name="code">INDE</field>
			<field name="category_id" ref="smart_hr.INDE" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = employee.get_indemnity_amount()</field>
		</record>

		<record id="hr_rule_total" model="hr.salary.rule">
			<field name="name">الإجمالي</field>
			<field name="sequence" eval="6" />
			<field name="code">TOT</field>
			<field name="category_id" ref="smart_hr.TOT" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = categories.BASIC + categories.ALW + categories.REW + categories.INDE</field>
		</record>
		
		<record id="hr_rule_deduction" model="hr.salary.rule">
			<field name="name">الحسميات</field>
			<field name="sequence" eval="7" />
			<field name="code">DED</field>
			<field name="category_id" ref="smart_hr.DED" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = employee.get_deduction_amount()</field>
		</record>		

		<record id="hr_rule_insurance" model="hr.salary.rule">
			<field name="name">التأمين</field>
			<field name="sequence" eval="8" />
			<field name="code">INS</field>
			<field name="category_id" ref="smart_hr.INS" />
			<field name="condition_select">none</field>
			<field name="amount_select">percentage</field>
			<field name="amount_percentage_base">employee.wage</field>
			<field name="quantity">1</field>
			<field name="amount_percentage">-10.0</field>
		</record>		
		
		<record id="hr_rule_net" model="hr.salary.rule">
			<field name="name">الصافي المستحق</field>
			<field name="sequence" eval="9" />
			<field name="code">NET</field>
			<field name="category_id" ref="smart_hr.NET" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = categories.BASIC + categories.ALW + categories.REW + categories.INDE + categories.DED + categories.INS</field>
		</record>

        <!-- هياكل الرواتب -->

         <record id="structure_base_hr" model="hr.payroll.structure">
            <field name="code">BASE-HR</field>
            <field name="name">الهيكل الأساسي</field>
            <field eval="[(6, 0, [ref('hr_rule_basic'), ref('hr_rule_allowance_transport'),ref('hr_rule_allowance_house'),ref('hr_rule_reward'),ref('hr_rule_indemnity'),ref('hr_rule_total'),ref('hr_rule_deduction'),ref('hr_rule_insurance'),ref('hr_rule_net')])]" name="rule_ids"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        	 							
		‫
	</data>
</openerp>