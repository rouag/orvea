<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="wizard_error_employee_form" model="ir.ui.view">
		<field name="name">wizard.error.employee.form</field>
		<field name="model">wizard.error.employee</field>
		<field name="arch" type="xml">
			<form>
				<group col="4" string="الفترة">
					<field name="month" />
				</group>
				<group col="4" string="خيارات أخرى">
					<field name="employee_id" />
					<field name="department_id" />
				</group>
				<footer>
					<button name="print_report" string="طباعة التقرير" type="object"
						default_focus="1" class="oe_highlight" />
					  أو
					<button string="إلغاء" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="wizard_error_employee_action" model="ir.actions.act_window">
		<field name="name">  تقرير الاخطاء بالموظف</field>
		<field name="res_model">wizard.error.employee</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="wizard_error_employee_form" />
		<field name="target">new</field>
	</record>

	<menuitem id="wizard_error_employee_menu" name="  تقرير الاخطاء بالموظف"
		groups="smart_hr.group_dm,smart_hr.group_hrm" sequence="22"
		action="wizard_error_employee_action" parent="hr_payroll_reporting" />

</odoo>