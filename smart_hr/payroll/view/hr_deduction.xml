<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<!-- الحسميات -->
		
		<record id="view_search_hr_deduction" model="ir.ui.view">
			<field name="name">hr.deduction.search</field>
			<field name="model">hr.deduction</field>
			<field name="arch" type="xml">
				<search string=" الحسميات">
					<field name="name" />
					<field name="date" />
					<field name="number_decision" />
					<field name="date_decision" />
					<separator />
					<group expand="0" string="تجميع حسب">
						<filter name="date" string="التاريخ" context="{'group_by':'date'}" />
					</group>
				</search>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_deduction_tree">
			<field name="name">hr.deduction.tree</field>
			<field name="model">hr.deduction</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string=" الحسميات">
					<field name="name" />
					<field name="date" />
					<field name="number_decision" />
					<field name="date_decision" />
					<field name="state" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_deduction_form">
			<field name="name">hr.deduction.form</field>
			<field name="model">hr.deduction</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="الحسميات">
					<header>
						<button name="action_waiting" string="إرسال للإعتماد" type="object" states="new" groups="smart_hr.group_deduction_management" />
						<button name="action_done" string="إعتماد" type="object" states="waiting" groups="smart_hr.group_deduction_management" />
						<button name="action_refuse" string="رفض" type="object" states="waiting" groups="smart_hr.group_deduction_management" />
						<button name="action_cancel" string="إلغاء الحسميات" type="object" states="waiting,done" groups="smart_hr.group_deduction_management" />
						<field name="state" widget="statusbar" statusbar_visible="new,waiting,done"  />
					</header>
					<sheet>
						<group>
							<group>
								<field name="month" />
								<field name="name" />
								<field name="date" readonly='1' />
							</group>
							<group>
								<field name="number_decision" />
								<field name="date_decision" />
							</group>
						</group>
						<notebook>
							<page string="التفاصيل">
								<group>
									<field name="line_ids" nolabel="1">
										<tree editable="bottom">
											<field name="employee_id" options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}"/>
											<field name="number" invisible="1" />
											<field name="job_id" invisible="1" />
											<field name="department_id" invisible="1" />
											<field name="deduction_type_id" options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}" />
											<field name="amount" />
											<field name="deduction_state" invisible="1" />
											<field name="state" />
										   <button name="%(smart_hr.action_wizard_deducation_action)d" type="action" string="إستبعاد"  icon="STOCK_CANCEL"
										 		attrs="{'invisible':['|',('deduction_state','!=','done'),('state','not in',('waiting','done'))]}"
										 		groups="smart_hr.group_deduction_management" />
											
										</tree>
									</field>
								</group>
							</page>
							<page string="سجل التغييرات">
								<field name="history_ids" nolabel="1"  readonly="1">
									<tree editable="bottom">
										<field name="action" />
										<field name="create_date" string="التاريخ" />
										<field name="create_uid" string="المستخدم" />
										<field name="number_decision" />
										<field name="date_decision" />
										<field name="employee_id" />
										<field name="reason" />
									</tree>
								</field>
							</page>
						</notebook>						
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_deduction">
			<field name="name"> الحسميات</field>
			<field name="res_model">hr.deduction</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
			
		<menuitem id="hr_deduction_menu" name=" الحسميات" sequence="25" groups="group_deduction_management"
			parent="hr_deduction_root" action="action_hr_deduction" />

		<!-- الحسميات بالموظف -->
		
		<record id="view_search_hr_deduction_line" model="ir.ui.view">
			<field name="name">hr.deduction.line.search</field>
			<field name="model">hr.deduction.line</field>
			<field name="arch" type="xml">
				<search string="الحسميات بالموظف">
					<field name="employee_id" />
					<field name="deduction_type_id" />
					<field name="state" />
					<separator />
					<group expand="0" string="تجميع حسب">
						<filter name="employee_id" string="الموظف" context="{'group_by':'employee_id'}" />
						<filter name="deduction_type_id" string="نوع الحسم" context="{'group_by':'deduction_type_id'}" />		
						<filter name="state" string="الحالة" context="{'group_by':'state'}" />					
					</group>
				</search>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_deduction_line_tree">
			<field name="name">hr.deduction.line.tree</field>
			<field name="model">hr.deduction.line</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="الحسميات بالموظف"  create='0' edit='0' delete='0' duplicate='0'>
					<field name="employee_id" />
					<field name="number"/>
					<field name="job_id"/>
					<field name="department_id"/>
					<field name="month" />
					<field name="deduction_type_id" />
					<field name="amount" />
					<field name="state" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_deduction_line_form">
			<field name="name">hr.deduction.line.form</field>
			<field name="model">hr.deduction.line</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="الحسميات بالموظف"  create='0' edit='0' delete='0' duplicate='0'>
					<sheet>
						<group>
							<group string="بيانات الموظف">
								<field name="employee_id" />
								<field name="number" />
								<field name="job_id" />
								<field name="department_id" />
							</group>
							<group string="بيانات الحسمية">
								<field name="month" />
								<field name="deduction_type_id" />
								<field name="amount" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_deduction_line">
			<field name="name">الحسميات بالموظف</field>
			<field name="res_model">hr.deduction.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="hr_deduction_line_menu" name="الحسميات بالموظف" groups="smart_hr.group_deduction_management"
			sequence="35" parent="hr_deduction_root" action="action_hr_deduction_line" />

		<!-- أنواع الحسميات -->
		
		<record id="view_search_hr_deduction_type" model="ir.ui.view">
			<field name="name">hr.deduction.type.search</field>
			<field name="model">hr.deduction.type</field>
			<field name="arch" type="xml">
				<search string="أنواع الحسميات">
					<field name="code" />
					<field name="name" />
				</search>
			</field>
		</record>
		
		<record model="ir.ui.view" id="hr_deduction_type_tree">
			<field name="name">hr.deduction.type.tree</field>
			<field name="model">hr.deduction.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="أنواع الحسميات">
					<field name="code" />
					<field name="name" />
					<field name="type" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_deduction_type_form">
			<field name="name">hr.deduction.type.form</field>
			<field name="model">hr.deduction.type</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="أنواع الحسميات">
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
							<field name="type" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_hr_deduction_type">
			<field name="name">أنواع الحسميات</field>
			<field name="res_model">hr.deduction.type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
 
		<menuitem id="hr_deduction_type_menu" name="أنواع الحسميات"
			sequence="40" parent="hr_payroll_setting" action="action_hr_deduction_type" />


	</data>
</openerp>
			
