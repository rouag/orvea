<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<!-- القروض -->
		
		<record id="view_search_hr_loan" model="ir.ui.view">
			<field name="name">hr.loan.search</field>
			<field name="model">hr.loan</field>
			<field name="arch" type="xml">
				<search string="القروض">
					<field name="name" />
					<field name="employee_id" />
					<field name="date" />
					<field name="amount" />
					<field name="bank_id" />
					<field name="loan_type_id" />
					<field name="number_decision" />
					<field name="date_decision" />
					<separator />
					<filter name="progress" string="القروض السارية" domain="[('state','=','progress')]"/>
					<filter name="done" string="القروض المنتهية" domain="[('state','=','done')]"/>
					<filter name="waiting" string="القروض في إنتظار الإعتماد" domain="[('state','=','waiting')]"/>
					<group expand="0" string="تجميع حسب">
						<filter name="date" string="التاريخ" context="{'group_by':'date'}" />
						<filter name="employee_id" string="الموظف" context="{'group_by':'employee_id'}" />
						<filter name="loan_type_id" string="نوع القرض" context="{'group_by':'loan_type_id'}" />
						<filter name="state" string="الحالة" context="{'group_by':'state'}" />
					</group>
				</search>
			</field>
		</record>
		
		<record model="ir.ui.view" id="hr_loan_tree">
			<field name="name">hr.loan.tree</field>
			<field name="model">hr.loan</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string=" القروض">
					<field name="name" />
					<field name="date" />
					<field name="employee_id" />
					<field name="amount" />
					<field name="monthly_amount" />
					<field name="date_from" />
					<field name="date_to" />
					<field name="residual_amount" />
					<field name="state" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_loan_form">
			<field name="name">hr.loan.form</field>
			<field name="model">hr.loan</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="القروض">
					<header>
						<button name="action_waiting" string="إرسال للإعتماد" type="object" states="new" groups="smart_hr.group_loan_management" />
						<button name="action_progress" string="إعتماد" type="object" states="waiting" groups="smart_hr.group_loan_management" />
						<button name="action_refuse" string="رفض" type="object" states="waiting" groups="smart_hr.group_loan_management" />
						<button name="%(smart_hr.action_wizard_loan_action)d" type="action" string="تجاوز شهر"
							 attrs="{'invisible':['|',('payment_full_amount','!=',False),('state','not in',('progress'))]}" 
							 context="{'action':'across'}"  groups="smart_hr.group_deduction_management" />
						<button name="%(smart_hr.action_wizard_loan_action)d" type="action" string="سداد كامل المبلغ"
						 	 attrs="{'invisible':['|',('payment_full_amount','!=',False),('state','not in',('progress'))]}" 
						 	 context="{'action':'full_amount'}" groups="smart_hr.group_deduction_management" />
						<field name="state" widget="statusbar" statusbar_visible="new,waiting,progress,done"  />
					</header>
					<sheet>
						<field name="payment_full_amount" invisible="1"/>
						<group>
							<group>
								<field name="employee_id" />
								<field name="name" />
								<field name="date" />
								<field name="loan_type_id" />
								<field name="bank_id" />
								<field name="number_decision" />
								<field name="date_decision" />
							</group>
							<group>
								<field name="date_from" />
								<field name="amount" />
								<field name="monthly_amount" />
								<field name="date_to" />
								<field name="installment_number"/>
							</group>
						</group>
						<notebook>
							<page string="سجل الأقساط">
								<field name="line_ids" nolabel="1">
									<tree editable="bottom">
										<field name="amount" />
										<field name="month" />
										<field name="date" />
									</tree>
								</field>
							</page>
							<page string="سجل التغييرات">
								<field name="history_ids" nolabel="1">
									<tree editable="bottom">
										<field name="action" />
										<field name="create_date" string="التاريخ" />
										<field name="create_uid" string="المستخدم" />
										<field name="month" />
										<field name="number_decision" />
										<field name="date_decision" />
										<field name="reason" />
									</tree>
								</field>
							</page>
						</notebook>						
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_loan">
			<field name="name"> القروض</field>
			<field name="res_model">hr.loan</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
			
		<menuitem id="hr_loan_menu" name=" القروض" sequence="25" groups="group_loan_management"
			parent="hr_loan_root" action="action_hr_loan" />

		<!-- أنواع القروض -->
		
		<record id="view_search_hr_loan_type" model="ir.ui.view">
			<field name="name">hr.loan.type.search</field>
			<field name="model">hr.loan.type</field>
			<field name="arch" type="xml">
				<search string="أنواع القروض">
					<field name="code" />
					<field name="name" />
				</search>
			</field>
		</record>
		
		<record model="ir.ui.view" id="hr_loan_type_tree">
			<field name="name">hr.loan.type.tree</field>
			<field name="model">hr.loan.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="أنواع القروض">
					<field name="code" />
					<field name="name" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_loan_type_form">
			<field name="name">hr.loan.type.form</field>
			<field name="model">hr.loan.type</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="أنواع القروض">
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_hr_loan_type">
			<field name="name">أنواع القروض</field>
			<field name="res_model">hr.loan.type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
 
		<menuitem id="hr_loan_type_menu" name="أنواع القروض" sequence="45" parent="hr_payroll_setting" action="action_hr_loan_type" />


	</data>
</openerp>
			
