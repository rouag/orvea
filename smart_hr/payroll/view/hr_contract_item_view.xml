<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- إعداد الدفع -->
		<record model="ir.ui.view" id="hr_contract_item_tree">
			<field name="name">hr.contract.item.tree</field>
			<field name="model">hr.contract.item</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="بند العقد">
					<field name="name" />
					<field name="text" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_contract_item_form">
			<field name="name">hr.contract.item.form</field>
			<field name="model">hr.contract.item</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string=" بند العقد">
					<sheet>
						<group>
							<field name="name" />
							<field name="text" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_contract_item">
			<field name="name"> بند العقد</field>
			<field name="res_model">hr.contract.item</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="hr_contract_item_menu" name="إعدادات بنود العقد "
			sequence="42" parent="hr.menu_human_resources_configuration" />

		<menuitem id="hr_contract_item_menu_sou" name=" بند العقد"
			sequence="25" parent="hr_contract_item_menu" action="action_hr_contract_item" />
	</data>
</openerp>
