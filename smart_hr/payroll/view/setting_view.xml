<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>





		<!-- هياكل الرواتب -->

		<record model="ir.actions.act_window" id="action_hr_payroll_structure">
			<field name="name">هياكل الرواتب</field>
			<field name="res_model">hr.payroll.structure</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem id="hr_payroll_structure_menu" name="هياكل الرواتب"
			sequence="5" groups="group_payroll_setting" parent="hr_payroll_setting"
			action="action_hr_payroll_structure" />

		<!-- التسلسل الهرمي للراتب -->

		<menuitem id="hr_payroll_structure_tree_menu" name="التسلسل الهرمي للرواتب"
			sequence="10" groups="group_payroll_setting" parent="hr_payroll_setting"
			action="hr_payroll.action_view_hr_payroll_structure_tree" />

		<!-- فئات قواعد الرواتب -->

		<record model="ir.actions.act_window" id="action_hr_salary_rule_category">
			<field name="name">فئات قواعد الرواتب</field>
			<field name="res_model">hr.salary.rule.category</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem id="hr_salary_rule_category_menu" name="فئات قواعد الرواتب"
			sequence="15" groups="group_payroll_setting" parent="hr_payroll_setting"
			action="action_hr_salary_rule_category" />

		<!-- قواعد إحتساب الرواتب -->

		<record model="ir.actions.act_window" id="action_hr_salary_rule">
			<field name="name">قواعد إحتساب الرواتب</field>
			<field name="res_model">hr.salary.rule</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem id="hr_salary_rule_menu" name="قواعد إحتساب الرواتب"
			sequence="20" groups="group_payroll_setting" parent="hr_payroll_setting"
			action="action_hr_salary_rule" />


		<!-- البدلات -->


		<record model="ir.ui.view" id="hr_allowance_tree">
			<field name="name">hr.allowance.tree</field>
			<field name="model">hr.allowance</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="البدلات">
					<field name="sequence" widget="handle" />
					<field name="name" />
					<field name="code" />
					<field name="type_id" />
					<field name="create_date" string="تاريخ الإنشاء" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_allowance_form">
			<field name="name">hr.allowance.form</field>
			<field name="model">hr.allowance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="البدلات">
					<sheet>
						<group col="4">
							<field name="name" />
							<field name="code" />
							<field name="type_id" />
							<field name="min_degree_id" />
							<field name="max_degree_id" />
							<field name="transport_allow" />


						</group>
						<field name="note" placeholder="ملاحظات ..." />
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_hr_allowance">
			<field name="name">البدلات</field>
			<field name="res_model">hr.allowance</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem id="hr_allowance_menu" name="البدلات" sequence="25"
			groups="group_payroll_setting" parent="hr_payroll_setting" action="action_hr_allowance" />

		<!-- المكافآت‬ -->

		<record model="ir.ui.view" id="hr_reward_tree">
			<field name="name">hr.reward.tree</field>
			<field name="model">hr.reward</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="المكافآت‬">
					<field name="sequence" widget="handle" />
					<field name="name" />
					<field name="code" />
					<field name="type_id" />
					<field name="create_date" string="تاريخ الإنشاء" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_reward_form">
			<field name="name">hr.reward.form</field>
			<field name="model">hr.reward</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="المكافآت‬">
					<sheet>
						<group col="4">
							<field name="name" />
							<field name="code" />
							<field name="type_id" />
							<field name="min_degree_id" />
							<field name="max_degree_id" />
							<field name="nb_salary" />
						</group>
						<field name="note" placeholder="ملاحظات ..." />
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_hr_reward">
			<field name="name">المكافآت‬</field>
			<field name="res_model">hr.reward</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem id="hr_reward_menu" name="المكافآت‬" sequence="30"
			groups="group_payroll_setting" parent="hr_payroll_setting" action="action_hr_reward" />


		<!-- التعويضات -->
		<record model="ir.ui.view" id="hr_indemnity_tree">
			<field name="name">hr.indemnity.tree</field>
			<field name="model">hr.indemnity</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="التعويضات">
					<field name="sequence" widget="handle" />
					<field name="name" />
					<field name="code" />
					<field name="type_id" />
					<field name="min_degree_id" />
					<field name="max_degree_id" />
					<field name="create_date" string="تاريخ الإنشاء" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_indemnity_form">
			<field name="name">hr.indemnity.form</field>
			<field name="model">hr.indemnity</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="التعويضات">
					<sheet>
						<group col="4">
							<field name="name" />
							<field name="code" />
							<field name="type_id" />
							<field name="min_degree_id" />
							<field name="max_degree_id" />
							<field name="transport_allow" />
						</group>
						<field name="note" placeholder="ملاحظات ..." />
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_hr_indemnity">
			<field name="name">التعويضات</field>
			<field name="res_model">hr.indemnity</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'readonly_by_pass': True}</field>
		</record>

		<menuitem id="hr_indemnity_menu" name="التعويضات" sequence="35"
			groups="group_payroll_setting" parent="hr_payroll_setting" action="action_hr_indemnity" />



	</data>
</openerp>
