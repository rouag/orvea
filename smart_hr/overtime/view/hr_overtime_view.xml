<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="hr_overtime_tree">
			<field name="name">hr.overtime.tree</field>
			<field name="model">hr.overtime</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="خارج الدوام">
					<field name="order_date" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_overtime_form">
			<field name="name">hr.overtime.form</field>
			<field name="model">hr.overtime</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="خارج الدوام">
					<header>


						<field name="state" widget="statusbar" statusbar_visible="draft,waiting,extern,done" />
					</header>
					<sheet>
						<group>
							<group>
								<field name="order_date" />
							</group>
						</group>
						<group>
							<notebook>
								<page string="المكلفين بخارج الدوام">
									<group>
										<field name="line_ids" nolabel="1">
											<tree>
												<field name="employee_id" />
												<field name="type" />
												<field name="date_from" />
												<field name="date_to" />
												<field name="days_number" />
												<field name="heure_number" />
												<field name="mission" />
											</tree>
											<form>
												<group>
													<group>
														<field name="employee_id" />
														<field name="type" />
														<field name="mission" />
													</group>
													<group>
														<field name="date_from" />
														<field name="date_to" />
														<field name="days_number" />
														<field name="heure_number" />
													</group>
												</group>
											</form>
										</field>
									</group>
								</page>
							</notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_hr_overtime">
			<field name="name">خارج دوام</field>
			<field name="res_model">hr.overtime</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem id="hr_overtime_menu" name="خارج دوام" sequence="5"
			parent="menu_hr_overtime_root" action="action_hr_overtime" />

	</data>
</openerp>
