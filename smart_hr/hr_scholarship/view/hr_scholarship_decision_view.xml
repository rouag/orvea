<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- قرار مباشرة الإبتعاث -->
		<record id="hr_scholarship_decision_form" model="ir.ui.view">
			<field name="name">hr.scholarship.decision.form</field>
			<field name="model">hr.scholarship.decision</field>
			<field name="arch" type="xml">
				<form string="قرار مباشرة الإبتعاث">
					<header>
						<button name="action_hrm" string=" ارسال طلب" type="object"
							states="new" confirm="هل أنت متأكد من القيام بهذا الإجراء ؟"
							groups="smart_hr.group_employee_request,smart_hr.group_personnel_hr_scholarship" />
						<button name="action_done" string="إعتماد" type="object"
							states="hrm" groups="smart_hr.group_personnel_hr_scholarship"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />
						<button name="action_refuse" string="رفض" type="object"
							states="hrm" groups="smart_hr.group_personnel_hr_scholarship"
							confirm="هل أنت متأكد من القيام بهذا الإجراء ؟" />

						<field name="state" widget="statusbar" statusbar_visible="new,hrm,done,cancel" />
					</header>
					<sheet>
						<group>
							<group string="بيانات الابتعاث">
								<field name="employee_id" attrs="{'readonly':[('state','!=','new')]}"
									options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}" />
								<field name="number" />
								<field name="job_id"
									options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}" />
								<field name="department_id"
									options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}" />
								<field name="date" attrs="{'readonly':[('state','!=','new')]}" />
								<field name="scholarship_ids" attrs="{'readonly':[('state','!=','new')]}"
									domain="[('employee_id', '=', employee_id),('state', 'in', ['finished', 'cutoff'])]" />
							</group>
							<group string="بيانات الخطاب">
								<field name="order_source" attrs="{'readonly':[('state','!=','new')]}" />
								<field name="order_number" attrs="{'readonly':[('state','!=','new')]}" />
								<field name="order_date" attrs="{'readonly':[('state','!=','new')]}" />
								<field name="file_decision" filename="file_decision_name"
									attrs="{'readonly':[('state','!=','new')]}" />
								<field name="file_decision_name" invisible="1" />
							</group>
						</group>
					
						<group>
							<field name="note" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="hr_scholarship_decision_tree" model="ir.ui.view">
			<field name="name">hr.scholarship.decision.tree</field>
			<field name="model">hr.scholarship.decision</field>
			<field name="arch" type="xml">
				<tree string="قرار مباشرة الإبتعاث">
					<field name="employee_id" />
					<field name="number" />
					<field name="job_id" />
					<field name="department_id" />
					<field name="date" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_hr_scholarship_decision">
			<field name="name">قرار مباشرة الإبتعاث‬‬</field>
			<field name="res_model">hr.scholarship.decision</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_hr_scholarship_decision" parent="hr_root_workflows"
			name="قرار مباشرة الإبتعاث" sequence="68" action="action_hr_scholarship_decision"
			groups="smart_hr.group_employee_request,smart_hr.group_personnel_hr_scholarship" />




	</data>
</openerp>